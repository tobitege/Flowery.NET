    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Boxed] TabItem /template/ Border#PART_LayoutRoot">
        <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeMediumCornerRadius}" />
