    </Style>

    <!-- NONE VARIANT OVERRIDES - must be last to win specificity -->
    <Style Selector="controls|DaisyTabs[Variant=None] TabItem:selected /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderThickness" Value="{DynamicResource DaisyBorderThicknessMedium}" />
        <Setter Property="BorderBrush" Value="Transparent" />
