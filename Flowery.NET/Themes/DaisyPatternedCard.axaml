<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <ControlTheme x:Key="{x:Type controls:DaisyPatternedCard}" TargetType="controls:DaisyPatternedCard"
                  BasedOn="{StaticResource {x:Type controls:DaisyCard}}">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- Standard solid background -->
                    <Border x:Name="PART_SolidBackground"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            ClipToBounds="True"
                            TextElement.FontSize="{TemplateBinding BodyFontSize}">
                        <Panel>
                            <!-- Pattern Layer -->
                            <Canvas x:Name="PART_PatternLayer" IsHitTestVisible="False" ClipToBounds="True" />

                            <!-- Ornament Layer -->
                            <Canvas x:Name="PART_OrnamentLayer" IsHitTestVisible="False" ClipToBounds="True" />

                            <ContentPresenter x:Name="PART_SolidContent"
                                              Padding="{TemplateBinding BodyPadding}"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}" />
                        </Panel>
                    </Border>

                    <!-- Glass effect background -->
                    <Panel x:Name="PART_GlassPanel" IsVisible="False" ClipToBounds="True">
                        <!-- Base tinted background -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Background>
                                <SolidColorBrush Color="{TemplateBinding GlassTint}"
                                                 Opacity="{TemplateBinding GlassOpacity}" />
                            </Border.Background>
                        </Border>

                        <!-- Frosted/matte overlay -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%" Opacity="0.4">
                                    <GradientStop Offset="0" Color="#E8E8E8" />
                                    <GradientStop Offset="0.25" Color="#F0F0F0" />
                                    <GradientStop Offset="0.5" Color="#E5E5E5" />
                                    <GradientStop Offset="0.75" Color="#EBEBEB" />
                                    <GradientStop Offset="1" Color="#E0E0E0" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Secondary texture layer -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Background>
                                <RadialGradientBrush Center="30%,30%" GradientOrigin="20%,20%" Opacity="0.15">
                                    <GradientStop Offset="0" Color="#FFFFFF" />
                                    <GradientStop Offset="0.5" Color="#C0C0C0" />
                                    <GradientStop Offset="1" Color="#00FFFFFF" />
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Top shine -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                VerticalAlignment="Top"
                                Height="50">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="#40FFFFFF" />
                                    <GradientStop Offset="0.5" Color="#15FFFFFF" />
                                    <GradientStop Offset="1" Color="#00FFFFFF" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Inner highlight border -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="1"
                                Margin="1">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="#50FFFFFF" />
                                    <GradientStop Offset="0.3" Color="#25FFFFFF" />
                                    <GradientStop Offset="1" Color="#10FFFFFF" />
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                        </Border>

                        <!-- Content -->
                        <Border Padding="{TemplateBinding BodyPadding}"
                                TextElement.FontSize="{TemplateBinding BodyFontSize}">
                            <ContentPresenter x:Name="PART_GlassContent"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}" />
                        </Border>

                        <!-- Outer border -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="1">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#000000" Opacity="0.08" />
                            </Border.BorderBrush>
                        </Border>
                    </Panel>
                </Panel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
