<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="#1e1e2e">
            <StackPanel Spacing="16">
                <TextBlock Text="Classic Variants" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyStatusIndicator Variant="Default" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Ping" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Bounce" Color="Info" />
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Warning" />
                    <controls:DaisyStatusIndicator Variant="Blink" Color="Error" />
                    <controls:DaisyStatusIndicator Variant="Ripple" Color="Primary" />
                    <controls:DaisyStatusIndicator Variant="Heartbeat" Color="Error" />
                </StackPanel>
                <TextBlock Text="Motion Variants" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyStatusIndicator Variant="Spin" Color="Primary" />
                    <controls:DaisyStatusIndicator Variant="Wave" Color="Secondary" />
                    <controls:DaisyStatusIndicator Variant="Glow" Color="Accent" />
                    <controls:DaisyStatusIndicator Variant="Morph" Color="Info" />
                    <controls:DaisyStatusIndicator Variant="Orbit" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Shake" Color="Error" />
                    <controls:DaisyStatusIndicator Variant="Wobble" Color="Warning" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyStatusIndicator Variant="Swing" Color="Primary" />
                    <controls:DaisyStatusIndicator Variant="Jiggle" Color="Secondary" />
                </StackPanel>
                <TextBlock Text="Effect Variants" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyStatusIndicator Variant="Radar" Color="Info" />
                    <controls:DaisyStatusIndicator Variant="Sonar" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Beacon" Color="Warning" />
                    <controls:DaisyStatusIndicator Variant="Pop" Color="Accent" />
                    <controls:DaisyStatusIndicator Variant="Flicker" Color="Error" />
                    <controls:DaisyStatusIndicator Variant="Breathe" Color="Primary" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyStatusIndicator Variant="Ring" Color="Secondary" />
                    <controls:DaisyStatusIndicator Variant="Flash" Color="Warning" />
                    <controls:DaisyStatusIndicator Variant="Throb" Color="Error" />
                    <controls:DaisyStatusIndicator Variant="Twinkle" Color="Accent" />
                    <controls:DaisyStatusIndicator Variant="Splash" Color="Info" />
                </StackPanel>
                <TextBlock Text="Sizes" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                    <controls:DaisyStatusIndicator Variant="Ping" Size="ExtraSmall" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Ping" Size="Small" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Ping" Size="Medium" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Ping" Size="Large" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Ping" Size="ExtraLarge" Color="Success" />
                </StackPanel>
                <TextBlock Text="Colors" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Default" />
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Primary" />
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Secondary" />
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Accent" />
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Neutral" />
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Info" />
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Warning" />
                    <controls:DaisyStatusIndicator Variant="Pulse" Color="Error" />
                </StackPanel>
                <TextBlock Text="Status Glyphs" FontWeight="SemiBold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                    <controls:DaisyStatusIndicator Variant="Battery" BatteryChargePercent="100" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="Battery" BatteryChargePercent="50" Color="Warning" />
                    <controls:DaisyStatusIndicator Variant="Battery" BatteryChargePercent="15" Color="Error" />
                    <controls:DaisyStatusIndicator Variant="TrafficLightVertical" TrafficLightActive="Green" />
                    <controls:DaisyStatusIndicator Variant="TrafficLightHorizontal" TrafficLightActive="Red" />
                    <controls:DaisyStatusIndicator Variant="WifiSignal" SignalStrength="3" Color="Primary" />
                    <controls:DaisyStatusIndicator Variant="WifiSignal" SignalStrength="1" Color="Warning" />
                    <controls:DaisyStatusIndicator Variant="CellularSignal" SignalStrength="5" Color="Success" />
                    <controls:DaisyStatusIndicator Variant="CellularSignal" SignalStrength="2" Color="Error" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Base ControlTheme with default template, sizes, and colors -->
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Themes/DaisyStatusIndicator/DaisyStatusIndicator.Base.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <!-- Variant styles (split into separate files for maintainability) -->
    <StyleInclude Source="/Themes/DaisyStatusIndicator/DaisyStatusIndicator.Classic.axaml" />
    <StyleInclude Source="/Themes/DaisyStatusIndicator/DaisyStatusIndicator.Motion.axaml" />
    <StyleInclude Source="/Themes/DaisyStatusIndicator/DaisyStatusIndicator.Effects.axaml" />
    <StyleInclude Source="/Themes/DaisyStatusIndicator/DaisyStatusIndicator.Glyphs.axaml" />

</Styles>
