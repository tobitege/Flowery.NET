<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource DaisyBase200Brush}">
            <StackPanel Spacing="20">
                <controls:DaisyCard>
                    <StackPanel Spacing="10">
                        <TextBlock Text="Card Title" FontWeight="Bold" FontSize="18" />
                        <TextBlock Text="If a dog chews shoes whose shoes does he choose?" />
                    </StackPanel>
                </controls:DaisyCard>

                <controls:DaisyCard Variant="Compact">
                     <StackPanel Spacing="5">
                        <TextBlock Text="Compact Card" FontWeight="Bold" />
                        <TextBlock Text="Less padding here." />
                    </StackPanel>
                </controls:DaisyCard>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyCard}" TargetType="controls:DaisyCard">
        <Setter Property="Background" Value="{DynamicResource DaisyBase100Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="BodyPadding" Value="32" />
        <Setter Property="BodyFontSize" Value="14" />
        <Setter Property="TitleFontSize" Value="20" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="IsGlass" Value="False" />
        <Setter Property="GlassBlur" Value="40" />
        <Setter Property="GlassOpacity" Value="0.3" />
        <Setter Property="GlassTint" Value="White" />
        <Setter Property="GlassTintOpacity" Value="0.5" />
        <Setter Property="GlassBorderOpacity" Value="0.2" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.1" OffsetX="0" OffsetY="2" />
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- Standard solid background -->
                    <Border x:Name="PART_SolidBackground"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding BodyPadding}"
                            TextElement.FontSize="{TemplateBinding BodyFontSize}">
                        <ContentPresenter x:Name="PART_SolidContent"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}" />
                    </Border>

                    <!-- Glass effect background (hidden by default) -->
                    <Panel x:Name="PART_GlassPanel" IsVisible="False" ClipToBounds="True">
                        <!-- Base tinted background -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Background>
                                <SolidColorBrush Color="{TemplateBinding GlassTint}"
                                                 Opacity="{TemplateBinding GlassOpacity}" />
                            </Border.Background>
                        </Border>

                        <!-- Frosted/matte overlay -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%" Opacity="0.4">
                                    <GradientStop Offset="0" Color="#E8E8E8" />
                                    <GradientStop Offset="0.25" Color="#F0F0F0" />
                                    <GradientStop Offset="0.5" Color="#E5E5E5" />
                                    <GradientStop Offset="0.75" Color="#EBEBEB" />
                                    <GradientStop Offset="1" Color="#E0E0E0" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Secondary texture layer -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Background>
                                <RadialGradientBrush Center="30%,30%" GradientOrigin="20%,20%" Opacity="0.15">
                                    <GradientStop Offset="0" Color="#FFFFFF" />
                                    <GradientStop Offset="0.5" Color="#C0C0C0" />
                                    <GradientStop Offset="1" Color="#00FFFFFF" />
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Top shine -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                VerticalAlignment="Top"
                                Height="50">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="#40FFFFFF" />
                                    <GradientStop Offset="0.5" Color="#15FFFFFF" />
                                    <GradientStop Offset="1" Color="#00FFFFFF" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Inner highlight border -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="1"
                                Margin="1">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="#50FFFFFF" />
                                    <GradientStop Offset="0.3" Color="#25FFFFFF" />
                                    <GradientStop Offset="1" Color="#10FFFFFF" />
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                        </Border>

                        <!-- Content -->
                        <Border Padding="{TemplateBinding BodyPadding}"
                                TextElement.FontSize="{TemplateBinding BodyFontSize}">
                            <ContentPresenter x:Name="PART_GlassContent"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}" />
                        </Border>

                        <!-- Outer border -->
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="1">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#000000" Opacity="0.08" />
                            </Border.BorderBrush>
                        </Border>
                    </Panel>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- Glass mode -->
        <Style Selector="^[IsGlass=True] /template/ Border#PART_SolidBackground">
            <Setter Property="IsVisible" Value="False" />
        </Style>
        <Style Selector="^[IsGlass=True] /template/ Panel#PART_GlassPanel">
            <Setter Property="IsVisible" Value="True" />
        </Style>
        <Style Selector="^[IsGlass=True]">
            <Setter Property="Effect" Value="{x:Null}" />
        </Style>

        <!-- Size Variants -->
        <Style Selector="^[Size=ExtraSmall]">
            <Setter Property="BodyPadding" Value="12" />
            <Setter Property="BodyFontSize" Value="11" />
            <Setter Property="TitleFontSize" Value="14" />
        </Style>
        <Style Selector="^[Size=Small]">
            <Setter Property="BodyPadding" Value="20" />
            <Setter Property="BodyFontSize" Value="12" />
            <Setter Property="TitleFontSize" Value="16" />
        </Style>
        <Style Selector="^[Size=Large]">
            <Setter Property="BodyPadding" Value="40" />
            <Setter Property="BodyFontSize" Value="16" />
            <Setter Property="TitleFontSize" Value="24" />
        </Style>
        <Style Selector="^[Size=ExtraLarge]">
            <Setter Property="BodyPadding" Value="48" />
            <Setter Property="BodyFontSize" Value="20" />
            <Setter Property="TitleFontSize" Value="32" />
        </Style>

        <!-- Color Variants -->
        <Style Selector="^[ColorVariant=Primary]">
            <Setter Property="Background" Value="{DynamicResource DaisyPrimaryBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyPrimaryContentBrush}" />
        </Style>
        <Style Selector="^[ColorVariant=Secondary]">
            <Setter Property="Background" Value="{DynamicResource DaisySecondaryBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisySecondaryContentBrush}" />
        </Style>
        <Style Selector="^[ColorVariant=Accent]">
            <Setter Property="Background" Value="{DynamicResource DaisyAccentBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyAccentContentBrush}" />
        </Style>
        <Style Selector="^[ColorVariant=Neutral]">
            <Setter Property="Background" Value="{DynamicResource DaisyNeutralBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyNeutralContentBrush}" />
        </Style>
        <Style Selector="^[ColorVariant=Info]">
            <Setter Property="Background" Value="{DynamicResource DaisyInfoBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyInfoContentBrush}" />
        </Style>
        <Style Selector="^[ColorVariant=Success]">
            <Setter Property="Background" Value="{DynamicResource DaisySuccessBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisySuccessContentBrush}" />
        </Style>
        <Style Selector="^[ColorVariant=Warning]">
            <Setter Property="Background" Value="{DynamicResource DaisyWarningBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyWarningContentBrush}" />
        </Style>
        <Style Selector="^[ColorVariant=Error]">
            <Setter Property="Background" Value="{DynamicResource DaisyErrorBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyErrorContentBrush}" />
        </Style>

        <!-- Card Styles -->
        <Style Selector="^[CardStyle=Beveled] /template/ Border#PART_SolidBackground">
            <Setter Property="BoxShadow" Value="inset 0 1 0 0 #40FFFFFF, inset 0 -1 0 0 #40000000, 0 4 6 -1 #20000000" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase200Brush}" />
        </Style>

        <Style Selector="^[CardStyle=Inset] /template/ Border#PART_SolidBackground">
            <Setter Property="BoxShadow" Value="inset 0 2 4 0 #20000000" />
            <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        </Style>

        <Style Selector="^[CardStyle=Panel] /template/ Border#PART_SolidBackground">
            <Setter Property="CornerRadius" Value="2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
            <Setter Property="Effect" Value="{x:Null}" />
        </Style>

        <!-- Variants -->
        <Style Selector="^[Variant=Compact]">
            <Setter Property="BodyPadding" Value="16" />
        </Style>

        <Style Selector="^[Variant=Side]">
        </Style>

    </ControlTheme>
</ResourceDictionary>
