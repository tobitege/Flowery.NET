<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource DaisyBase200Brush}" Height="200">
            <StackPanel Spacing="10" Width="150">
                <controls:DaisySizeDropdown />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <!-- Item template for size preview with abbreviation badge -->
        <DataTemplate x:Key="SizeItemTemplate" DataType="controls:SizePreviewInfo">
            <Grid ColumnDefinitions="Auto,*" MinHeight="24">
                <!-- Size abbreviation badge -->
                <Border Grid.Column="0"
                        Background="{DynamicResource DaisyBase300Brush}"
                        CornerRadius="4"
                        Padding="6,2"
                        MinWidth="28"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Abbreviation}"
                               Foreground="{DynamicResource DaisyBaseContentBrush}"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
                <!-- Size name (localized) - inherits FontSize from parent -->
                <TextBlock Grid.Column="1"
                    Text="{Binding DisplayName}"
                    Foreground="{DynamicResource DaisyBaseContentBrush}"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0" />
            </Grid>
        </DataTemplate>

        <ControlTheme x:Key="{x:Type controls:DaisySizeDropdown}" TargetType="controls:DaisySizeDropdown">
            <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeMediumCornerRadius}" />
            <Setter Property="Padding" Value="12,0,30,0" />
            <Setter Property="Height" Value="{DynamicResource DaisySizeMediumHeight}" />
            <Setter Property="MinWidth" Value="140" />
            <Setter Property="FontSize" Value="{DynamicResource DaisySizeMediumFontSize}" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="ItemTemplate" Value="{StaticResource SizeItemTemplate}" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid ColumnDefinitions="*,Auto">
                        <Border x:Name="Background"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Height="{TemplateBinding Height}"/>

                        <ContentPresenter x:Name="ContentPresenter"
                                          Grid.Column="0"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding ItemTemplate}"
                                          Margin="{TemplateBinding Padding}"
                                          TextElement.FontSize="{TemplateBinding FontSize}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>

                        <!-- Chevron -->
                        <Path x:Name="Chevron"
                              Grid.Column="1"
                              Width="10" Height="6"
                              Stretch="Uniform"
                              Data="M1,1 L5,5 L9,1"
                              Stroke="{DynamicResource DaisyBaseContentBrush}"
                              StrokeThickness="2"
                              Fill="Transparent"
                              Margin="0,0,12,0"
                              VerticalAlignment="Center"
                              IsHitTestVisible="False"/>

                        <Popup x:Name="PART_Popup"
                               WindowManagerAddShadowHint="False"
                               IsOpen="{TemplateBinding IsDropDownOpen, Mode=TwoWay}"
                               PlacementTarget="{Binding ElementName=Background}"
                               IsLightDismissEnabled="True"
                               InheritsTransform="True">
                            <Border x:Name="PopupBorder"
                                    Background="{DynamicResource DaisyBase200Brush}"
                                    BorderBrush="{DynamicResource DaisyNeutralBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="4"
                                    Margin="0,4,0,0"
                                    MinWidth="160">
                                <ScrollViewer MaxHeight="300">
                                    <ItemsPresenter Name="PART_ItemsPresenter"
                                                    ItemsPanel="{TemplateBinding ItemsPanel}" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter>

            <!-- Hover State -->
            <Style Selector="^:pointerover /template/ Border#Background">
                 <Setter Property="Background" Value="{DynamicResource DaisyBase300Brush}" />
            </Style>

            <!-- Focus State -->
            <Style Selector="^:focus /template/ Border#Background">
                 <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
                 <Setter Property="BorderThickness" Value="2" />
            </Style>

            <!-- Size Variants -->
            <Style Selector="^[Size=ExtraLarge]">
                <Setter Property="Height" Value="{DynamicResource DaisySizeExtraLargeHeight}" />
                <Setter Property="FontSize" Value="{DynamicResource DaisySizeExtraLargeFontSize}" />
                <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeExtraLargeCornerRadius}" />
            </Style>
            <Style Selector="^[Size=Large]">
                <Setter Property="Height" Value="{DynamicResource DaisySizeLargeHeight}" />
                <Setter Property="FontSize" Value="{DynamicResource DaisySizeLargeFontSize}" />
                <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeLargeCornerRadius}" />
            </Style>
            <Style Selector="^[Size=Small]">
                <Setter Property="Height" Value="{DynamicResource DaisySizeSmallHeight}" />
                <Setter Property="FontSize" Value="{DynamicResource DaisySizeSmallFontSize}" />
                <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeSmallCornerRadius}" />
            </Style>
            <Style Selector="^[Size=ExtraSmall]">
                <Setter Property="Height" Value="{DynamicResource DaisySizeExtraSmallHeight}" />
                <Setter Property="FontSize" Value="{DynamicResource DaisySizeExtraSmallFontSize}" />
                <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeExtraSmallCornerRadius}" />
            </Style>

        </ControlTheme>
    </Styles.Resources>

    <!-- Style for ComboBoxItem inside DaisySizeDropdown -->
    <Style Selector="controls|DaisySizeDropdown ComboBoxItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
    <Style Selector="controls|DaisySizeDropdown ComboBoxItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource DaisyBase300Brush}" />
    </Style>
    <Style Selector="controls|DaisySizeDropdown ComboBoxItem:selected">
        <Setter Property="Background" Value="{DynamicResource DaisyPrimaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyPrimaryContentBrush}" />
    </Style>

</Styles>
