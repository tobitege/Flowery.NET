<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:weather="clr-namespace:Flowery.Controls.Custom.Weather;assembly=Flowery.NET"
                    xmlns:models="clr-namespace:Flowery.Controls.Custom.Weather.Models;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource DaisyBase200Brush}">
            <weather:DaisyWeatherForecast>
                <models:ForecastDay Date="2025-07-16" Condition="PartlyCloudy" HighTemperature="16" LowTemperature="8" />
                <models:ForecastDay Date="2025-07-17" Condition="Rain" HighTemperature="15" LowTemperature="9" />
                <models:ForecastDay Date="2025-07-18" Condition="Sunny" HighTemperature="15" LowTemperature="5" />
                <models:ForecastDay Date="2025-07-19" Condition="Sunny" HighTemperature="15" LowTemperature="6" />
                <models:ForecastDay Date="2025-07-20" Condition="PartlyCloudy" HighTemperature="15" LowTemperature="7" />
                <models:ForecastDay Date="2025-07-21" Condition="Cloudy" HighTemperature="15" LowTemperature="6" />
            </weather:DaisyWeatherForecast>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type weather:DaisyWeatherForecast}" TargetType="weather:DaisyWeatherForecast">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" Spacing="8" />
            </ItemsPanelTemplate>
        </Setter>
        <Setter Property="ItemTemplate">
            <DataTemplate x:DataType="models:ForecastDay">
                <Border Background="{DynamicResource DaisyBase100Brush}"
                        CornerRadius="8"
                        Padding="12,8"
                        MinWidth="60">
                    <StackPanel HorizontalAlignment="Center" Spacing="4">
                        <!-- Day Name -->
                        <TextBlock Text="{Binding DayName}"
                            FontSize="{DynamicResource DaisySizeMediumSecondaryFontSize}"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Foreground="{DynamicResource DaisyBaseContentBrush}" />

                        <!-- Animated Weather Icon -->
                        <weather:DaisyWeatherIcon IconSize="28"
                                                  HorizontalAlignment="Center"
                                                  Foreground="{DynamicResource DaisyPrimaryBrush}"
                                                  Condition="{Binding Condition}" />

                        <!-- High/Low Temperature -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="2">
                            <TextBlock Text="{Binding HighTemperature, StringFormat={}{0:0}°}"
                                FontSize="{DynamicResource DaisySizeMediumTertiaryFontSize}"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            <TextBlock Text="|"
                                FontSize="{DynamicResource DaisySizeMediumTertiaryFontSize}"
                                Opacity="0.4"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            <TextBlock Text="{Binding LowTemperature, StringFormat={}{0:0}°}"
                                FontSize="{DynamicResource DaisySizeMediumTertiaryFontSize}"
                                Opacity="0.6"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}">
                    <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>
