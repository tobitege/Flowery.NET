<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="10">
                <controls:DaisyCountdown Value="59" />
                <controls:DaisyCountdown Value="9" Digits="2" />
                <controls:DaisyCountdown Value="123" Digits="3" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyCountdown}" TargetType="controls:DaisyCountdown">
        <Setter Property="FontFamily" Value="Cascadia Mono, Consolas, Courier New, monospace" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <ControlTemplate TargetType="controls:DaisyCountdown">
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                    <TextBlock x:Name="PART_Text"
                               Text="{TemplateBinding DisplayValue}"
                               FontFamily="{TemplateBinding FontFamily}"
                               FontSize="{TemplateBinding FontSize}"
                               FontWeight="{TemplateBinding FontWeight}"
                               Foreground="{TemplateBinding Foreground}"
                               HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                               VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <TextBlock.Transitions>
                            <Transitions>
                                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut" />
                            </Transitions>
                        </TextBlock.Transitions>
                    </TextBlock>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Size adjustments -->
        <Style Selector="^[Size=ExtraSmall]">
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style Selector="^[Size=Small]">
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style Selector="^[Size=Medium]">
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style Selector="^[Size=Large]">
            <Setter Property="FontSize" Value="32" />
        </Style>
        <Style Selector="^[Size=ExtraLarge]">
            <Setter Property="FontSize" Value="40" />
        </Style>

        <Style Selector="^:pointerover /template/ TextBlock#PART_Text">
            <Setter Property="Opacity" Value="0.8" />
        </Style>
    </ControlTheme>
</ResourceDictionary>
