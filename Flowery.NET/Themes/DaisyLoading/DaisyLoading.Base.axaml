<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <ControlTheme x:Key="{x:Type controls:DaisyLoading}" TargetType="controls:DaisyLoading">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />

        <!-- Default Template (Spinner) -->
        <Setter Property="Template">
            <ControlTemplate>
                <Arc Name="PART_Arc"
                     Classes="spinning"
                     Width="{TemplateBinding Width}"
                     Height="{TemplateBinding Height}"
                     StartAngle="0"
                     SweepAngle="270"
                     Stroke="{TemplateBinding Foreground}"
                     StrokeThickness="3"
                     StrokeLineCap="Round"/>
            </ControlTemplate>
        </Setter>

        <!-- Spinning Animation for Spinner and Ring -->
        <Style Selector="^ /template/ Arc.spinning">
            <Style.Animations>
                <Animation Duration="0:0:0.75" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0.75">
                        <Setter Property="RotateTransform.Angle" Value="360" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- ===================== SIZES ===================== -->

        <Style Selector="^[Size=ExtraSmall]">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
        </Style>

        <Style Selector="^[Size=Small]">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>

        <!-- Medium is default (24x24) -->

        <Style Selector="^[Size=Large]">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
        </Style>

        <Style Selector="^[Size=ExtraLarge]">
            <Setter Property="Width" Value="48" />
            <Setter Property="Height" Value="48" />
        </Style>

        <!-- ===================== COLORS ===================== -->

        <Style Selector="^[Color=Primary]">
            <Setter Property="Foreground" Value="{DynamicResource DaisyPrimaryBrush}" />
        </Style>

        <Style Selector="^[Color=Secondary]">
            <Setter Property="Foreground" Value="{DynamicResource DaisySecondaryBrush}" />
        </Style>

        <Style Selector="^[Color=Accent]">
            <Setter Property="Foreground" Value="{DynamicResource DaisyAccentBrush}" />
        </Style>

        <Style Selector="^[Color=Neutral]">
            <Setter Property="Foreground" Value="{DynamicResource DaisyNeutralBrush}" />
        </Style>

        <Style Selector="^[Color=Info]">
            <Setter Property="Foreground" Value="{DynamicResource DaisyInfoBrush}" />
        </Style>

        <Style Selector="^[Color=Success]">
            <Setter Property="Foreground" Value="{DynamicResource DaisySuccessBrush}" />
        </Style>

        <Style Selector="^[Color=Warning]">
            <Setter Property="Foreground" Value="{DynamicResource DaisyWarningBrush}" />
        </Style>

        <Style Selector="^[Color=Error]">
            <Setter Property="Foreground" Value="{DynamicResource DaisyErrorBrush}" />
        </Style>

    </ControlTheme>
</ResourceDictionary>
