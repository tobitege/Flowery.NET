    <!-- ==================== APPROVAL FLOW ==================== -->
    <Style Selector="controls|DaisyLoading[Variant=ApprovalFlow]">
        <Setter Property="Template">
            <ControlTemplate>
                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                    <Canvas Width="96" Height="96">
                        <!-- Flow lines -->
                        <Border Width="20" Height="2" Canvas.Left="26" Canvas.Top="47"
                                Background="{TemplateBinding Foreground}" Opacity="0.3"/>
                        <Border Width="20" Height="2" Canvas.Left="50" Canvas.Top="47"
                                Background="{TemplateBinding Foreground}" Opacity="0.3"/>
                        <!-- Node circles -->
                        <Ellipse Width="20" Height="20" Canvas.Left="8" Canvas.Top="38"
                                 Stroke="{TemplateBinding Foreground}" StrokeThickness="2"/>
                        <Ellipse Width="20" Height="20" Canvas.Left="38" Canvas.Top="38"
                                 Stroke="{TemplateBinding Foreground}" StrokeThickness="2"/>
                        <Ellipse Width="20" Height="20" Canvas.Left="68" Canvas.Top="38"
                                 Stroke="{TemplateBinding Foreground}" StrokeThickness="2"/>
                        <!-- Inner dots -->
                        <Ellipse Classes="dot1" Width="8" Height="8" Canvas.Left="14" Canvas.Top="44"
                                 Fill="{TemplateBinding Foreground}" Opacity="0.2"
                                 RenderTransformOrigin="0.5,0.5"/>
                        <Ellipse Classes="dot2" Width="8" Height="8" Canvas.Left="44" Canvas.Top="44"
                                 Fill="{TemplateBinding Foreground}" Opacity="0.2"
                                 RenderTransformOrigin="0.5,0.5"/>
                        <Ellipse Classes="dot3" Width="8" Height="8" Canvas.Left="74" Canvas.Top="44"
                                 Fill="{TemplateBinding Foreground}" Opacity="0.2"
                                 RenderTransformOrigin="0.5,0.5"/>
                    </Canvas>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

