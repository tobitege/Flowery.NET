    <!-- ==================== BRIEFCASE SPIN ==================== -->
    <Style Selector="controls|DaisyLoading[Variant=BriefcaseSpin]">
        <Setter Property="Template">
            <ControlTemplate>
                <Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Uniform">
                    <Canvas Classes="briefcase-group" Width="96" Height="96" RenderTransformOrigin="0.5,0.5">
                        <!-- Briefcase body -->
                        <Border Width="60" Height="44" Canvas.Left="18" Canvas.Top="38"
                                BorderBrush="{TemplateBinding Foreground}" BorderThickness="2.5"
                                CornerRadius="6" Background="Transparent"/>
                        <!-- Handle -->
                        <Border Width="24" Height="12" Canvas.Left="36" Canvas.Top="28"
                                BorderBrush="{TemplateBinding Foreground}" BorderThickness="2.5,2.5,2.5,0"
                                CornerRadius="4,4,0,0" Background="Transparent"/>
                        <!-- Latch -->
                        <Border Classes="latch" Width="16" Height="8" Canvas.Left="40" Canvas.Top="56"
                                Background="{TemplateBinding Foreground}" Opacity="0.6" CornerRadius="2"/>
                    </Canvas>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="controls|DaisyLoading[Variant=BriefcaseSpin] /template/ Canvas.briefcase-group">
        <Style.Animations>
            <Animation Duration="0:0:1.2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="RotateTransform.Angle" Value="-5"/>
                    <Setter Property="TranslateTransform.Y" Value="0"/>
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.3">
                    <Setter Property="RotateTransform.Angle" Value="5"/>
                    <Setter Property="TranslateTransform.Y" Value="-4"/>
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.6">
                    <Setter Property="RotateTransform.Angle" Value="-5"/>
                    <Setter Property="TranslateTransform.Y" Value="0"/>
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.9">
                    <Setter Property="RotateTransform.Angle" Value="5"/>
                    <Setter Property="TranslateTransform.Y" Value="-4"/>
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1.2">
                    <Setter Property="RotateTransform.Angle" Value="-5"/>
                    <Setter Property="TranslateTransform.Y" Value="0"/>
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <Style Selector="controls|DaisyLoading[Variant=BriefcaseSpin] /template/ Border.latch">
