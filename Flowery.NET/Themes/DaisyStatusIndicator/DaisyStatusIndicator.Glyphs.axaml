    <!-- ===================== WIFI SIGNAL ===================== -->
    <Style Selector="controls|DaisyStatusIndicator[Variant=WifiSignal]">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Template">
            <ControlTemplate>
                <!-- Fixed design-size glyph scaled by Viewbox for XS..XL -->
                <Viewbox Width="{TemplateBinding Width}"
                         Height="{TemplateBinding Height}"
                         Stretch="Uniform">
                    <Canvas Width="20" Height="16">
                        <!-- WiFi arcs (from outer to inner) -->
                        <!-- Arc 3 (outer) -->
                        <Path Name="PART_Arc3"
                              Data="M2,12 A8,8 0 0,1 18,12"
                              Stroke="{TemplateBinding Background}"
                              StrokeThickness="2"
                              StrokeLineCap="Round"
                              Fill="Transparent"
                              Opacity="0.25" />
                        <!-- Arc 2 (middle) -->
                        <Path Name="PART_Arc2"
                              Data="M5,12 A5,5 0 0,1 15,12"
                              Stroke="{TemplateBinding Background}"
                              StrokeThickness="2"
                              StrokeLineCap="Round"
                              Fill="Transparent"
                              Opacity="0.25" />
                        <!-- Arc 1 (inner) -->
                        <Path Name="PART_Arc1"
                              Data="M8,12 A2,2 0 0,1 12,12"
                              Stroke="{TemplateBinding Background}"
                              StrokeThickness="2"
                              StrokeLineCap="Round"
                              Fill="Transparent"
                              Opacity="0.25" />
                        <!-- Center dot -->
                        <Ellipse Name="PART_Dot"
                                 Width="3" Height="3"
                                 Canvas.Left="8.5" Canvas.Top="13"
                                 Fill="{TemplateBinding Background}"
                                 Opacity="0.25" />
                    </Canvas>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

    <!-- WiFi signal strength states (0-3) -->
    <Style Selector="controls|DaisyStatusIndicator[Variant=WifiSignal] /template/ Ellipse#PART_Dot">
        <Setter Property="Opacity" Value="1" />
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=WifiSignal][SignalStrength=1] /template/ Path#PART_Arc1,
                     controls|DaisyStatusIndicator[Variant=WifiSignal][SignalStrength=2] /template/ Path#PART_Arc1,
                     controls|DaisyStatusIndicator[Variant=WifiSignal][SignalStrength=3] /template/ Path#PART_Arc1">
        <Setter Property="Opacity" Value="1" />
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=WifiSignal][SignalStrength=2] /template/ Path#PART_Arc2,
                     controls|DaisyStatusIndicator[Variant=WifiSignal][SignalStrength=3] /template/ Path#PART_Arc2">
