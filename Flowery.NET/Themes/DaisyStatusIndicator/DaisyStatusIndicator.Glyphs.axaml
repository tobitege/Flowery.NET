<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <!-- ===================== BATTERY VARIANT ===================== -->
    <!-- Battery with 4 segmented inner bars that light up based on BatteryChargePercent -->
    <Style Selector="controls|DaisyStatusIndicator[Variant=Battery]">
        <Setter Property="Width" Value="28" />
        <Setter Property="Height" Value="12" />
        <Setter Property="Template">
            <ControlTemplate>
                <!-- Keep a fixed design-size glyph and scale with Viewbox for XS..XL -->
                <Viewbox Width="{TemplateBinding Width}"
                         Height="{TemplateBinding Height}"
                         Stretch="Uniform">
                    <Grid Width="28" Height="12" ClipToBounds="False">
                        <!-- Battery body outline -->
                        <Border Name="PART_BatteryOutline"
                                Width="22" Height="10"
                                BorderBrush="{TemplateBinding Background}"
                                BorderThickness="1.5"
                                CornerRadius="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                            <!-- Inner bars container -->
                            <StackPanel Orientation="Horizontal" Spacing="1" Margin="2,1" VerticalAlignment="Center">
                                <!-- Bar 1 (25%+) -->
                                <Border Name="PART_BatteryBar1"
                                        Width="3" Height="6"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="0.5"
                                        Opacity="0.2" />
                                <!-- Bar 2 (50%+) -->
                                <Border Name="PART_BatteryBar2"
                                        Width="3" Height="6"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="0.5"
                                        Opacity="0.2" />
                                <!-- Bar 3 (75%+) -->
                                <Border Name="PART_BatteryBar3"
                                        Width="3" Height="6"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="0.5"
                                        Opacity="0.2" />
                                <!-- Bar 4 (98%+) -->
                                <Border Name="PART_BatteryBar4"
                                        Width="3" Height="6"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="0.5"
                                        Opacity="0.2" />
                            </StackPanel>
                        </Border>
                        <!-- Battery cap (terminal) -->
                        <Border Name="PART_BatteryCap"
                                Width="3" Height="5"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0,1,1,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="22,0,0,0" />
                    </Grid>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

    <!-- Battery bar visibility is controlled dynamically in code-behind based on BatteryChargePercent -->
    <!-- Bar 1: >= 25%, Bar 2: >= 50%, Bar 3: >= 75%, Bar 4: >= 98% -->

    <!-- Battery size variants -->
    <Style Selector="controls|DaisyStatusIndicator[Variant=Battery][Size=ExtraSmall]">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="8" />
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=Battery][Size=Small]">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="10" />
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=Battery][Size=Large]">
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="16" />
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=Battery][Size=ExtraLarge]">
        <Setter Property="Width" Value="44" />
        <Setter Property="Height" Value="20" />
    </Style>

