                    <Canvas Width="20" Height="16">
                        <!-- Bar 1 (shortest) -->
                        <Border Name="PART_Bar1"
                                Width="3" Height="4"
                                Canvas.Left="0" Canvas.Top="12"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0.5"
                                Opacity="0.25" />
                        <!-- Bar 2 -->
                        <Border Name="PART_Bar2"
                                Width="3" Height="7"
                                Canvas.Left="4" Canvas.Top="9"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0.5"
                                Opacity="0.25" />
                        <!-- Bar 3 -->
                        <Border Name="PART_Bar3"
                                Width="3" Height="10"
                                Canvas.Left="8" Canvas.Top="6"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0.5"
                                Opacity="0.25" />
                        <!-- Bar 4 -->
                        <Border Name="PART_Bar4"
                                Width="3" Height="13"
                                Canvas.Left="12" Canvas.Top="3"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0.5"
                                Opacity="0.25" />
                        <!-- Bar 5 (tallest) -->
                        <Border Name="PART_Bar5"
                                Width="3" Height="16"
                                Canvas.Left="16" Canvas.Top="0"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0.5"
                                Opacity="0.25" />
                    </Canvas>
                </Viewbox>
            </ControlTemplate>
        </Setter>
    </Style>

