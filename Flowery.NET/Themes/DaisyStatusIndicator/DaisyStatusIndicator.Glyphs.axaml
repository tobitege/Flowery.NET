        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="44" />
        <Setter Property="Template">
            <ControlTemplate>
                <!-- Outer black border (fixed color) -->
                <Border Background="#000000"
                        CornerRadius="5"
                        Padding="3">
                    <!-- Inner housing -->
                    <Border Background="{DynamicResource DaisyNeutralBrush}"
                            CornerRadius="3"
                            Padding="2">
                        <StackPanel Spacing="2">
                            <!-- Red light -->
                            <Ellipse Name="PART_RedLight"
                                     Classes="traffic-light-light"
                                     Fill="{DynamicResource DaisyErrorBrush}"
                                     Opacity="0.25" />
                            <!-- Yellow light -->
                            <Ellipse Name="PART_YellowLight"
                                     Classes="traffic-light-light"
                                     Fill="{DynamicResource DaisyWarningBrush}"
                                     Opacity="0.25" />
                            <!-- Green light -->
                            <Ellipse Name="PART_GreenLight"
                                     Classes="traffic-light-light"
                                     Fill="{DynamicResource DaisySuccessBrush}"
                                     Opacity="0.25" />
                        </StackPanel>
                    </Border>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

