<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <!-- ===================== RADAR VARIANT ===================== -->
    <!-- Radar sweep effect - rotating sweep arm like a real radar -->

    <!-- Radar ring outline -->
    <Style Selector="controls|DaisyStatusIndicator[Variant=Radar] /template/ Ellipse#PART_MainEllipse">
        <Setter Property="Opacity" Value="0.35" />
        <Setter Property="Fill" Value="Transparent" />
        <Setter Property="Stroke" Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" />
        <Setter Property="StrokeThickness" Value="1.5" />
    </Style>
    <!-- Sweep arm - very thin and half-height, positioned to sweep from center outward -->
    <Style Selector="controls|DaisyStatusIndicator[Variant=Radar] /template/ Ellipse#PART_AnimationEllipse">
        <Setter Property="IsVisible" Value="True" />
        <Setter Property="Opacity" Value="0.85" />
        <Setter Property="Width" Value="2" />
        <Setter Property="Height" Value="6" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="RenderTransformOrigin" Value="50%,100%" />
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="RotateTransform.Angle" Value="0" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:2">
                    <Setter Property="RotateTransform.Angle" Value="360" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <!-- First trail element -->
    <Style Selector="controls|DaisyStatusIndicator[Variant=Radar] /template/ Ellipse#PART_AnimationEllipse2">
        <Setter Property="IsVisible" Value="True" />
        <Setter Property="Opacity" Value="0.45" />
        <Setter Property="Width" Value="2" />
        <Setter Property="Height" Value="5" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="RenderTransformOrigin" Value="50%,100%" />
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="RotateTransform.Angle" Value="-20" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:2">
                    <Setter Property="RotateTransform.Angle" Value="340" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <!-- Second trail element -->
    <Style Selector="controls|DaisyStatusIndicator[Variant=Radar] /template/ Ellipse#PART_AnimationEllipse3">
        <Setter Property="IsVisible" Value="True" />
        <Setter Property="Opacity" Value="0.2" />
        <Setter Property="Width" Value="2" />
        <Setter Property="Height" Value="4" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="RenderTransformOrigin" Value="50%,100%" />
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="RotateTransform.Angle" Value="-40" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:2">
                    <Setter Property="RotateTransform.Angle" Value="320" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- Radar sizing: arm/trails must pivot at center for all sizes -->
    <Style Selector="controls|DaisyStatusIndicator[Variant=Radar][Size=ExtraSmall] /template/ Ellipse#PART_AnimationEllipse">
        <Setter Property="Height" Value="3" />
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=Radar][Size=Small] /template/ Ellipse#PART_AnimationEllipse">
