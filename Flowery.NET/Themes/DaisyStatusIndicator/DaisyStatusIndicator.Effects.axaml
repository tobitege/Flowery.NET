    <Style Selector="controls|DaisyStatusIndicator[Variant=Radar][Size=ExtraSmall] /template/ Ellipse#PART_AnimationEllipse2">
        <Setter Property="Height" Value="2" />
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=Radar][Size=Small] /template/ Ellipse#PART_AnimationEllipse2">
        <Setter Property="Height" Value="3" />
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=Radar][Size=Large] /template/ Ellipse#PART_AnimationEllipse2">
