<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <!-- ===================== PING VARIANT ===================== -->
    <!-- Expanding ring that fades out (classic online indicator) -->

    <Style Selector="controls|DaisyStatusIndicator[Variant=Ping] /template/ Ellipse#PART_AnimationEllipse">
        <Setter Property="IsVisible" Value="True" />
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="Opacity" Value="0.75" />
                    <Setter Property="ScaleTransform.ScaleX" Value="1" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1">
                    <Setter Property="Opacity" Value="0" />
                    <Setter Property="ScaleTransform.ScaleX" Value="2" />
                    <Setter Property="ScaleTransform.ScaleY" Value="2" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ===================== BOUNCE VARIANT ===================== -->
    <!-- Dot bounces up and down -->

    <Style Selector="controls|DaisyStatusIndicator[Variant=Bounce]">
        <Setter Property="Margin" Value="0,6,0,0" />
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=Bounce] /template/ Ellipse#PART_MainEllipse">
        <Style.Animations>
            <Animation Duration="0:0:0.5" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="TranslateTransform.Y" Value="0" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.25">
                    <Setter Property="TranslateTransform.Y" Value="-6" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.5">
                    <Setter Property="TranslateTransform.Y" Value="0" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ===================== PULSE VARIANT ===================== -->
    <!-- Breathing/pulsing opacity effect -->

    <Style Selector="controls|DaisyStatusIndicator[Variant=Pulse] /template/ Ellipse#PART_MainEllipse">
        <Style.Animations>
            <Animation Duration="0:0:2" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="Opacity" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1">
                    <Setter Property="Opacity" Value="0.3" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:2">
                    <Setter Property="Opacity" Value="1" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ===================== BLINK VARIANT ===================== -->
    <!-- Simple on/off blinking -->

    <Style Selector="controls|DaisyStatusIndicator[Variant=Blink] /template/ Ellipse#PART_MainEllipse">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="Opacity" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.45">
                    <Setter Property="Opacity" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.5">
                    <Setter Property="Opacity" Value="0" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.95">
                    <Setter Property="Opacity" Value="0" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1">
                    <Setter Property="Opacity" Value="1" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ===================== RIPPLE VARIANT ===================== -->
    <!-- Multiple expanding rings -->

    <Style Selector="controls|DaisyStatusIndicator[Variant=Ripple] /template/ Ellipse#PART_AnimationEllipse">
        <Setter Property="IsVisible" Value="True" />
        <Style.Animations>
            <Animation Duration="0:0:1.5" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="Opacity" Value="0.6" />
                    <Setter Property="ScaleTransform.ScaleX" Value="1" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1.5">
                    <Setter Property="Opacity" Value="0" />
                    <Setter Property="ScaleTransform.ScaleX" Value="2.5" />
                    <Setter Property="ScaleTransform.ScaleY" Value="2.5" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=Ripple] /template/ Ellipse#PART_AnimationEllipse2">
        <Setter Property="IsVisible" Value="True" />
        <Style.Animations>
            <Animation Duration="0:0:1.5" IterationCount="Infinite" Delay="0:0:0.5">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="Opacity" Value="0.6" />
                    <Setter Property="ScaleTransform.ScaleX" Value="1" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1.5">
                    <Setter Property="Opacity" Value="0" />
                    <Setter Property="ScaleTransform.ScaleX" Value="2.5" />
                    <Setter Property="ScaleTransform.ScaleY" Value="2.5" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|DaisyStatusIndicator[Variant=Ripple] /template/ Ellipse#PART_AnimationEllipse3">
        <Setter Property="IsVisible" Value="True" />
        <Style.Animations>
            <Animation Duration="0:0:1.5" IterationCount="Infinite" Delay="0:0:1">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="Opacity" Value="0.6" />
                    <Setter Property="ScaleTransform.ScaleX" Value="1" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1.5">
                    <Setter Property="Opacity" Value="0" />
                    <Setter Property="ScaleTransform.ScaleX" Value="2.5" />
                    <Setter Property="ScaleTransform.ScaleY" Value="2.5" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- ===================== HEARTBEAT VARIANT ===================== -->
    <!-- Double-pulse like a heartbeat -->

    <Style Selector="controls|DaisyStatusIndicator[Variant=Heartbeat] /template/ Ellipse#PART_MainEllipse">
        <Style.Animations>
            <Animation Duration="0:0:1" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="ScaleTransform.ScaleX" Value="1" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.1">
                    <Setter Property="ScaleTransform.ScaleX" Value="1.3" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1.3" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.2">
                    <Setter Property="ScaleTransform.ScaleX" Value="1" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.3">
                    <Setter Property="ScaleTransform.ScaleX" Value="1.2" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1.2" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:0.4">
                    <Setter Property="ScaleTransform.ScaleX" Value="1" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1">
                    <Setter Property="ScaleTransform.ScaleX" Value="1" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

</Styles>
