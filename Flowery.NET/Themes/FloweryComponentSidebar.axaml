<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="0" Background="{DynamicResource DaisyBase200Brush}" Width="260" Height="500">
            <controls:FloweryComponentSidebar />
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <ControlTheme x:Key="{x:Type controls:FloweryComponentSidebar}" TargetType="controls:FloweryComponentSidebar">
            <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{DynamicResource DaisyBase300Brush}"
                            BorderThickness="0,0,1,0"
                            Width="{TemplateBinding SidebarWidth}">
                        <Grid RowDefinitions="Auto,*">
                            <!-- Search Box -->
                            <Border Grid.Row="0" Margin="8,8,20,8">
                                <controls:DaisyInput x:Name="PART_SearchInput"
                                                     Watermark="Search components..."
                                                     Text="{TemplateBinding SearchText, Mode=TwoWay}"
                                                     Variant="Bordered"
                                                     Classes="sidebar-search">
                                    <controls:DaisyInput.InnerRightContent>
                                        <Button x:Name="PART_ClearButton"
                                                Classes="sidebar-search-clear"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="8,0,12,0"
                                                Cursor="Hand"
                                                IsVisible="{Binding Text, RelativeSource={RelativeSource AncestorType=controls:DaisyInput}, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                            <PathIcon Width="14" Height="14"
                                                      Foreground="{DynamicResource DaisyBaseContentBrush}"
                                                      Opacity="0.5"
                                                      Data="{StaticResource DaisyIconClose}" />
                                        </Button>
                                    </controls:DaisyInput.InnerRightContent>
                                </controls:DaisyInput>
                            </Border>

                            <!-- Categories List -->
                            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <ItemsControl Name="PART_CategoriesControl"
                                              ItemsSource="{TemplateBinding Categories}"
                                              Margin="0,0,20,8">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="controls:SidebarCategory">
                                            <StackPanel Margin="0,0,0,4">
                                                <!-- Collapsible Category -->
                                                <controls:DaisyCollapse Classes="sidebar-category"
                                                                        IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                                                                        Background="Transparent"
                                                                        CornerRadius="0"
                                                                        Padding="0">
                                                    <controls:DaisyCollapse.Header>
                                                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="8,0,0,0" VerticalAlignment="Center">
                                                            <PathIcon Width="18" Height="18"
                                                                        VerticalAlignment="Center"
                                                                        Foreground="{DynamicResource DaisyBaseContentBrush}"
                                                                        Data="{Binding IconKey, Converter={x:Static controls:IconKeyConverter.Instance}}" />
                                                            <TextBlock Text="{Binding DisplayName}"
                                                                FontWeight="SemiBold"
                                                                VerticalAlignment="Center"
                                                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                                                        </StackPanel>
                                                    </controls:DaisyCollapse.Header>
                                                    <!-- Category Items -->
                                                    <ItemsControl ItemsSource="{Binding Items}" Margin="2,3,0,3">
                                                        <ItemsControl.DataTemplates>
                                                                <DataTemplate
                                                                    x:DataType="controls:SidebarThemeSelectorItem">
                                                                <StackPanel Margin="8,6,0,8"
                                                                    Spacing="6">
                                                                    <TextBlock Text="Theme"
                                                                        Opacity="0.7"
                                                                        Margin="10,0,0,0" />
                                                                    <controls:DaisyThemeDropdown
                                                                        Margin="0,0,8,0" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            <DataTemplate x:DataType="controls:SidebarLanguageSelectorItem">
                                                                <StackPanel Margin="8,6,0,8" Spacing="6">
                                                                    <TextBlock
                                                                        Text="Controls' Language"
                                                                        Opacity="0.7"
                                                                        Margin="10,0,0,0" />
                                                                    <controls:DaisySelect
                                                                        Margin="0,0,8,0"
                                                                        PlaceholderText="Select language"
                                                                        ItemsSource="{Binding AvailableLanguages, RelativeSource={RelativeSource AncestorType=controls:FloweryComponentSidebar}}"
                                                                        SelectedItem="{Binding SelectedLanguage, RelativeSource={RelativeSource AncestorType=controls:FloweryComponentSidebar}, Mode=TwoWay}"
                                                                        DisplayMemberBinding="{Binding DisplayName}" />
                                                                </StackPanel>
                                                            </DataTemplate>

                                                            <DataTemplate
                                                                x:DataType="controls:SidebarSizeSelectorItem">
                                                                <StackPanel Margin="8,6,0,8"
                                                                    Spacing="6">
                                                                    <TextBlock Text="Global Size"
                                                                        Opacity="0.7"
                                                                        Margin="10,0,0,0" />
                                                                    <controls:DaisySizeDropdown
                                                                        Margin="0,0,8,0" />
                                                                </StackPanel>
                                                            </DataTemplate>

                                                            <DataTemplate
                                                                x:DataType="controls:SidebarScalingSelectorItem">
                                                                <StackPanel Margin="8,6,0,8"
                                                                    Spacing="6">
                                                                    <controls:DaisyToggle
                                                                        Content="Auto Scaling"
                                                                        Margin="10,0,16,0"
                                                                        Variant="Primary"
                                                                        IsChecked="{Binding IsScalingEnabled, RelativeSource={RelativeSource AncestorType=controls:FloweryComponentSidebar}, Mode=TwoWay}" />
                                                                </StackPanel>
                                                            </DataTemplate>

                                                            <DataTemplate x:DataType="controls:SidebarItem">
                                                                <Button Classes="sidebar-item"
                                                                        Tag="{Binding}"
                                                                        HorizontalAlignment="Stretch"
                                                                        HorizontalContentAlignment="Stretch"
                                                                        Cursor="Hand">
                                                                    <Grid
                                                                        ColumnDefinitions="*,Auto,Auto">
                                                                        <TextBlock Grid.Column="0"
                                                                            Text="{Binding DisplayName}"
                                                                            VerticalAlignment="Center" />
                                                                        <!-- Favorite Star Button -->
                                                                        <Button Grid.Column="1"
                                                                            Classes="sidebar-favorite-btn"
                                                                            Tag="{Binding}"
                                                                            Background="Transparent"
                                                                            BorderThickness="0"
                                                                            Padding="4,2"
                                                                            Margin="4,0,0,0"
                                                                            Cursor="Hand"
                                                                            IsVisible="{Binding ShowFavoriteIcon}">
                                                                            <Panel>
                                                                                <!-- Filled star
                                                                                when favorite -->
                                                                                <PathIcon Width="14"
                                                                                    Height="14"
                                                                                    Foreground="{DynamicResource DaisyWarningBrush}"
                                                                                    IsVisible="{Binding IsFavorite}"
                                                                                    Data="{StaticResource DaisyIconStarFilled}" />
                                                                                <!-- Outline star
                                                                                when not favorite -->
                                                                                <PathIcon Width="14"
                                                                                    Height="14"
                                                                                    Foreground="{DynamicResource DaisyBaseContentBrush}"
                                                                                    Opacity="0.5"
                                                                                    IsVisible="{Binding !IsFavorite}"
                                                                                    Data="{StaticResource DaisyIconStarOutline}" />
                                                                            </Panel>
                                                                        </Button>
                                                                        <controls:DaisyBadge
                                                                            Grid.Column="2"
                                                                            Variant="Neutral"
                                                                            Size="ExtraSmall"
                                                                            IsVisible="{Binding Badge, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                                                            Content="{Binding Badge}"
                                                                            Margin="8,0,0,0"
                                                                            Opacity="0.7" />
                                                                    </Grid>
                                                                </Button>
                                                            </DataTemplate>
                                                        </ItemsControl.DataTemplates>
                                                    </ItemsControl>
                                                </controls:DaisyCollapse>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>

            <!-- Size Variants - set FontSize which cascades to child elements -->
            <Style Selector="^[Size=ExtraSmall]">
                <Setter Property="FontSize" Value="{DynamicResource DaisySizeExtraSmallFontSize}" />
            </Style>
            <Style Selector="^[Size=Small]">
                <Setter Property="FontSize" Value="{DynamicResource DaisySizeSmallFontSize}" />
            </Style>
            <Style Selector="^[Size=Medium]">
                <Setter Property="FontSize" Value="{DynamicResource DaisySizeMediumFontSize}" />
            </Style>
            <Style Selector="^[Size=Large]">
                <Setter Property="FontSize" Value="{DynamicResource DaisySizeLargeFontSize}" />
            </Style>
            <Style Selector="^[Size=ExtraLarge]">
                <Setter Property="FontSize" Value="{DynamicResource DaisySizeExtraLargeFontSize}" />
            </Style>

        </ControlTheme>
    </Styles.Resources>

    <!-- Search input style -->
    <Style Selector="controls|DaisyInput.sidebar-search">
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="MinHeight" Value="36" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar[Size=ExtraSmall] controls|DaisyInput.sidebar-search">
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="MinHeight" Value="32" />
    </Style>

    <!-- Clear button style -->
    <Style Selector="Button.sidebar-search-clear">
        <Setter Property="Opacity" Value="0.6" />
    </Style>
    <Style Selector="Button.sidebar-search-clear:pointerover">
        <Setter Property="Opacity" Value="1" />
    </Style>
    <Style Selector="Button.sidebar-search-clear:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- Sidebar category collapse styles -->
    <Style Selector="controls|DaisyCollapse.sidebar-category">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    <Style Selector="controls|DaisyCollapse.sidebar-category /template/ ToggleButton#PART_HeaderButton">
        <Setter Property="Padding" Value="16,8,8,4" />
        <Setter Property="Cursor" Value="Hand" />
        <!-- Always reserve a 1px underline; collapsed uses transparent brush -->
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
    <Style Selector="controls|DaisyCollapse.sidebar-category[IsExpanded=True] /template/ ToggleButton#PART_HeaderButton">
        <Setter Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=controls:DaisyCollapse}}" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar[Size=ExtraSmall] controls|DaisyCollapse.sidebar-category /template/ ToggleButton#PART_HeaderButton">
        <Setter Property="Padding" Value="16,6,8,2" />
    </Style>
    <Style Selector="controls|DaisyCollapse.sidebar-category /template/ ToggleButton#PART_HeaderButton:pointerover">
        <Setter Property="Background" Value="{DynamicResource DaisyBase300Brush}" />
    </Style>
    <Style Selector="controls|DaisyCollapse.sidebar-category /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Sidebar item button styles -->
    <Style Selector="controls|FloweryComponentSidebar Button.sidebar-item">
        <Setter Property="MinHeight" Value="0" />
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="4,0,4,0" />
        <Setter Property="Padding" Value="{DynamicResource FloweryComponentSidebarItemMediumPadding}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="PART_Background"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      RecognizesAccessKey="True"
                                      TextElement.Foreground="{TemplateBinding Foreground}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="controls|FloweryComponentSidebar[Size=ExtraSmall] Button.sidebar-item">
        <Setter Property="Padding" Value="{DynamicResource FloweryComponentSidebarItemExtraSmallPadding}" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar[Size=Small] Button.sidebar-item">
        <Setter Property="Padding" Value="{DynamicResource FloweryComponentSidebarItemSmallPadding}" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar[Size=Large] Button.sidebar-item">
        <Setter Property="Padding" Value="{DynamicResource FloweryComponentSidebarItemLargePadding}" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar[Size=ExtraLarge] Button.sidebar-item">
        <Setter Property="Padding" Value="{DynamicResource FloweryComponentSidebarItemExtraLargePadding}" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar Button.sidebar-item:pointerover">
        <Setter Property="Background" Value="{DynamicResource DaisyBase300Brush}" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar Button.sidebar-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar Button.sidebar-item:pressed">
        <Setter Property="Background" Value="{DynamicResource DaisyNeutralBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyNeutralContentBrush}" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar Button.sidebar-item:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar Button.sidebar-item.selected">
        <Setter Property="Background" Value="{DynamicResource DaisyPrimaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyPrimaryContentBrush}" />
    </Style>
    <Style Selector="controls|FloweryComponentSidebar Button.sidebar-item.selected /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- Sidebar favorite button styles -->
    <Style Selector="Button.sidebar-favorite-btn">
        <Setter Property="Opacity" Value="0.6" />
    </Style>
    <Style Selector="Button.sidebar-favorite-btn:pointerover">
        <Setter Property="Opacity" Value="1" />
    </Style>
    <Style Selector="Button.sidebar-favorite-btn:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>

</Styles>
