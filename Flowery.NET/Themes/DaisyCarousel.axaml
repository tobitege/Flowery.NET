<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Width="400" Height="300" Background="{DynamicResource DaisyBase100Brush}">
             <controls:DaisyCarousel>
                 <Border Background="#F87171" CornerRadius="8" Width="300" Height="200">
                    <TextBlock Text="Slide 1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="24"/>
                 </Border>
                 <Border Background="#34D399" CornerRadius="8" Width="300" Height="200">
                    <TextBlock Text="Slide 2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="24"/>
                 </Border>
             </controls:DaisyCarousel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyCarousel}" TargetType="controls:DaisyCarousel">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <Grid>
                        <!-- Slide Container -->
                        <Border ClipToBounds="True" CornerRadius="8">
                            <Grid Name="PART_SlideContainer" />
                        </Border>

                        <!-- Navigation Buttons -->
                        <Button Name="PART_PreviousButton"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="{DynamicResource DaisyNeutralBrush}"
                                Foreground="{DynamicResource DaisyNeutralContentBrush}"
                                Padding="12,8"
                                Margin="8"
                                CornerRadius="24"
                                Opacity="0.8"
                                IsVisible="{TemplateBinding ShowNavigation}">
                            <PathIcon Data="M15.41,16.09L10.83,11.5L15.41,6.91L14,5.5L8,11.5L14,17.5L15.41,16.09Z"
                                      Width="16" Height="16" />
                        </Button>

                        <Button Name="PART_NextButton"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="{DynamicResource DaisyNeutralBrush}"
                                Foreground="{DynamicResource DaisyNeutralContentBrush}"
                                Padding="12,8"
                                Margin="8"
                                CornerRadius="24"
                                Opacity="0.8"
                                IsVisible="{TemplateBinding ShowNavigation}">
                            <PathIcon Data="M8.59,16.34L13.17,11.75L8.59,7.16L10,5.75L16,11.75L10,17.75L8.59,16.34Z" 
                                      Width="16" Height="16" />
                        </Button>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
