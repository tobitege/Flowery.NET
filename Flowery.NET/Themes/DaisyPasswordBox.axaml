<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource DaisyBase100Brush}">
            <StackPanel Spacing="10" Width="300">
                <controls:DaisyPasswordBox Watermark="Enter password..." />
                <controls:DaisyPasswordBox Variant="Primary" Watermark="Primary variant" />
                <controls:DaisyPasswordBox Label="Password" IsRequired="True" Watermark="Enter password..." />
                <controls:DaisyPasswordBox Label="Confirm" HelperText="Must match password" Watermark="Confirm..." />
                <controls:DaisyPasswordBox Variant="Error" Watermark="Password too short" />
                <controls:DaisyPasswordBox IsPasswordRevealButtonEnabled="False" Watermark="No reveal button" />
                <controls:DaisyPasswordBox Label="Floating Password" LabelPosition="Floating" Watermark="Enter password..." />
                <controls:DaisyPasswordBox Label="Floating with Icon" LabelPosition="Floating" StartIcon="{StaticResource DaisyIconSettings}" Watermark="Enter secret..." />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyPasswordBox}" TargetType="controls:DaisyPasswordBox">
        <Setter Property="Background" Value="{DynamicResource DaisyBase100Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="{DynamicResource DaisyInputMediumPadding}" />
        <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeMediumCornerRadius}" />
        <Setter Property="FontSize" Value="{DynamicResource DaisySizeMediumFontSize}" />
        <Setter Property="MinHeight" Value="{DynamicResource DaisySizeMediumHeight}" />
        <Setter Property="Focusable" Value="True" />

        <Setter Property="Template">
            <ControlTemplate>
                <Grid RowDefinitions="Auto,Auto,*,Auto">
                    <!-- Row 0: Label row -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="4"
                                Margin="0,0,0,4"
                                IsVisible="{TemplateBinding Label, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <TextBlock Text="{TemplateBinding Label}"
                                   FontWeight="SemiBold"
                                   FontSize="{TemplateBinding ScaledLabelFontSize}"
                                   Foreground="{DynamicResource DaisyBaseContentBrush}" />
                        <TextBlock Text="*"
                                   FontSize="{TemplateBinding ScaledLabelFontSize}"
                                   Foreground="{DynamicResource DaisyErrorBrush}"
                                   IsVisible="{TemplateBinding IsRequired}" />
                        <TextBlock Text="Optional"
                                   FontSize="{TemplateBinding ScaledLabelFontSize}"
                                   Opacity="0.7"
                                   Foreground="{DynamicResource DaisyBaseContentBrush}"
                                   IsVisible="{TemplateBinding IsOptional}" />
                    </StackPanel>

                    <!-- Row 1: Hint text -->
                    <TextBlock Grid.Row="1"
                               Text="{TemplateBinding HintText}"
                               FontSize="{TemplateBinding ScaledLabelFontSize}"
                               Opacity="0.7"
                               Margin="0,0,0,4"
                               Foreground="{DynamicResource DaisyBaseContentBrush}"
                               IsVisible="{TemplateBinding HintText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

                    <!-- Row 2: Main input area -->
                    <Panel Grid.Row="2">
                        <Border x:Name="PART_Background"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                MinHeight="{TemplateBinding MinHeight}" />

                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                            <!-- Start Icon -->
                            <PathIcon Grid.Column="0"
                                       x:Name="PART_StartIcon"
                                       Data="{TemplateBinding StartIcon}"
                                       Foreground="{DynamicResource DaisyBaseContentBrush}"
                                       Width="16" Height="16"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       IsVisible="{TemplateBinding StartIcon, Converter={x:Static ObjectConverters.IsNotNull}}" />

                            <!-- Text input with custom theme to remove focus border -->
                            <TextBox Grid.Column="1"
                                     x:Name="PART_TextBox"
                                     Watermark="{TemplateBinding Watermark}"
                                     MaxLength="{TemplateBinding MaxLength}"
                                     FontSize="{TemplateBinding FontSize}"
                                     Foreground="{TemplateBinding Foreground}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="{TemplateBinding Padding}"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FocusAdorner="{x:Null}"
                                     CaretBrush="{DynamicResource DaisyBaseContentBrush}"
                                     SelectionBrush="{DynamicResource DaisyPrimaryBrush}"
                                     SelectionForegroundBrush="{DynamicResource DaisyPrimaryContentBrush}">
                                <TextBox.Theme>
                                    <ControlTheme TargetType="TextBox">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="Template">
                                            <ControlTemplate>
                                                <ScrollViewer HorizontalScrollBarVisibility="{TemplateBinding (ScrollViewer.HorizontalScrollBarVisibility)}"
                                                              VerticalScrollBarVisibility="{TemplateBinding (ScrollViewer.VerticalScrollBarVisibility)}">
                                                    <Panel>
                                                        <TextBlock x:Name="PART_Watermark"
                                                                   Text="{TemplateBinding Watermark}"
                                                                   Opacity="0.5"
                                                                   IsVisible="{TemplateBinding Text, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                   Margin="{TemplateBinding Padding}" />
                                                        <TextPresenter x:Name="PART_TextPresenter"
                                                                       Text="{TemplateBinding Text, Mode=TwoWay}"
                                                                       CaretIndex="{TemplateBinding CaretIndex}"
                                                                       SelectionStart="{TemplateBinding SelectionStart}"
                                                                       SelectionEnd="{TemplateBinding SelectionEnd}"
                                                                       TextAlignment="{TemplateBinding TextAlignment}"
                                                                       TextWrapping="{TemplateBinding TextWrapping}"
                                                                       PasswordChar="{TemplateBinding PasswordChar}"
                                                                       RevealPassword="{TemplateBinding RevealPassword}"
                                                                       SelectionBrush="{TemplateBinding SelectionBrush}"
                                                                       SelectionForegroundBrush="{TemplateBinding SelectionForegroundBrush}"
                                                                       CaretBrush="{TemplateBinding CaretBrush}"
                                                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                       Margin="{TemplateBinding Padding}" />
                                                    </Panel>
                                                </ScrollViewer>
                                            </ControlTemplate>
                                        </Setter>
                                    </ControlTheme>
                                </TextBox.Theme>
                            </TextBox>

                            <!-- Reveal Button -->
                            <Button Grid.Column="2"
                                    x:Name="PART_RevealButton"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="8,0"
                                    VerticalAlignment="Center"
                                    Cursor="Hand"
                                    IsVisible="{TemplateBinding IsPasswordRevealButtonEnabled}">
                                <PathIcon x:Name="PART_RevealIcon"
                                          Data="{StaticResource DaisyIconEyeClosed}"
                                          Foreground="{DynamicResource DaisyBaseContentBrush}"
                                          Width="16" Height="16" />
                            </Button>

                            <!-- End Icon -->
                            <PathIcon Grid.Column="3"
                                       x:Name="PART_EndIcon"
                                       Data="{TemplateBinding EndIcon}"
                                       Foreground="{DynamicResource DaisyBaseContentBrush}"
                                       Width="16" Height="16"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"
                                       IsVisible="{TemplateBinding EndIcon, Converter={x:Static ObjectConverters.IsNotNull}}" />
                        </Grid>
                    </Panel>

                    <!-- Row 3: Helper text -->
                    <TextBlock Grid.Row="3"
                               Text="{TemplateBinding HelperText}"
                               FontSize="{TemplateBinding ScaledLabelFontSize}"
                               Opacity="0.7"
                               Margin="0,4,0,0"
                               HorizontalAlignment="Right"
                               Foreground="{DynamicResource DaisyBaseContentBrush}"
                               IsVisible="{TemplateBinding HelperText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                </Grid>
            </ControlTemplate>
        </Setter>

        <!-- Floating label template (LabelPosition=Floating) -->
        <Style Selector="^[LabelPosition=Floating]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisyInputFloatingMediumHeight}" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid RowDefinitions="Auto,16,*,Auto" ClipToBounds="False" Margin="0,10,0,0">
                        <!-- Row 0: Hint text -->
                        <TextBlock Grid.Row="0"
                                   Text="{TemplateBinding HintText}"
                                   FontSize="{TemplateBinding ScaledLabelFontSize}"
                                   Opacity="0.7"
                                   Margin="0,0,0,4"
                                   Foreground="{DynamicResource DaisyBaseContentBrush}"
                                   IsVisible="{TemplateBinding HintText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

                        <!-- Row 2: Main input area (Row 1 is reserved for floating space) -->
                        <Panel Grid.Row="2" ClipToBounds="False">
                            <Border x:Name="PART_Background"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    MinHeight="{TemplateBinding MinHeight}" />

                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ClipToBounds="False">
                                <!-- Start Icon -->
                                <PathIcon Grid.Column="0"
                                           x:Name="PART_StartIcon"
                                           Data="{TemplateBinding StartIcon}"
                                           Foreground="{DynamicResource DaisyBaseContentBrush}"
                                           Width="16" Height="16"
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"
                                           IsVisible="{TemplateBinding StartIcon, Converter={x:Static ObjectConverters.IsNotNull}}" />

                                <!-- Text input + Floating label overlay -->
                                <Grid Grid.Column="1" ClipToBounds="False">
                                    <!-- Watermark (only shows when focused and no text) -->
                                    <TextBlock x:Name="PART_Watermark"
                                               Text="{TemplateBinding Watermark}"
                                               FontSize="{TemplateBinding FontSize}"
                                               Foreground="{DynamicResource DaisyBaseContentBrush}"
                                               Opacity="0"
                                               Padding="{TemplateBinding Padding}"
                                               VerticalAlignment="Center"
                                               IsHitTestVisible="False"
                                               IsVisible="{TemplateBinding Password, Converter={x:Static StringConverters.IsNullOrEmpty}}" />

                                    <!-- Inner TextBox with custom theme to remove focus border -->
                                    <TextBox x:Name="PART_TextBox"
                                             MaxLength="{TemplateBinding MaxLength}"
                                             FontSize="{TemplateBinding FontSize}"
                                             Foreground="{TemplateBinding Foreground}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Padding="{TemplateBinding Padding}"
                                             VerticalAlignment="Center"
                                             VerticalContentAlignment="Center"
                                             FocusAdorner="{x:Null}"
                                             CaretBrush="{DynamicResource DaisyBaseContentBrush}"
                                             SelectionBrush="{DynamicResource DaisyPrimaryBrush}"
                                             SelectionForegroundBrush="{DynamicResource DaisyPrimaryContentBrush}">
                                        <TextBox.Theme>
                                            <ControlTheme TargetType="TextBox">
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="BorderBrush" Value="Transparent" />
                                                <Setter Property="Template">
                                                    <ControlTemplate>
                                                        <ScrollViewer HorizontalScrollBarVisibility="{TemplateBinding (ScrollViewer.HorizontalScrollBarVisibility)}"
                                                                      VerticalScrollBarVisibility="{TemplateBinding (ScrollViewer.VerticalScrollBarVisibility)}">
                                                            <Panel>
                                                                <TextPresenter x:Name="PART_TextPresenter"
                                                                               Text="{TemplateBinding Text, Mode=TwoWay}"
                                                                               CaretIndex="{TemplateBinding CaretIndex}"
                                                                               SelectionStart="{TemplateBinding SelectionStart}"
                                                                               SelectionEnd="{TemplateBinding SelectionEnd}"
                                                                               TextAlignment="{TemplateBinding TextAlignment}"
                                                                               TextWrapping="{TemplateBinding TextWrapping}"
                                                                               PasswordChar="{TemplateBinding PasswordChar}"
                                                                               RevealPassword="{TemplateBinding RevealPassword}"
                                                                               SelectionBrush="{TemplateBinding SelectionBrush}"
                                                                               SelectionForegroundBrush="{TemplateBinding SelectionForegroundBrush}"
                                                                               CaretBrush="{TemplateBinding CaretBrush}"
                                                                               VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                               HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                               Margin="{TemplateBinding Padding}" />
                                                            </Panel>
                                                        </ScrollViewer>
                                                    </ControlTemplate>
                                                </Setter>
                                            </ControlTheme>
                                        </TextBox.Theme>
                                    </TextBox>

                                    <!-- Floating Label Container -->
                                    <Border x:Name="PART_FloatingLabelContainer"
                                            IsHitTestVisible="False"
                                            HorizontalAlignment="Left"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            ZIndex="10"
                                            Padding="4,0"
                                            Background="{DynamicResource DaisyBase100Brush}"
                                            BorderThickness="1"
                                            BorderBrush="Transparent"
                                            CornerRadius="4"
                                            Opacity="0.5"
                                            RenderTransformOrigin="0%,50%"
                                            IsVisible="{TemplateBinding Label, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                        <Border.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="1" ScaleY="1" />
                                                <TranslateTransform X="0" Y="0" />
                                            </TransformGroup>
                                        </Border.RenderTransform>
                                        <Border.Transitions>
                                            <Transitions>
                                                <DoubleTransition Property="Opacity" Duration="0:0:0.2" Delay="0:0:0" />
                                                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.28" Delay="0:0:0.05" Easing="0.4,0,0.2,1" />
                                            </Transitions>
                                        </Border.Transitions>

                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock x:Name="PART_FloatingLabel"
                                                       Text="{TemplateBinding Label}"
                                                       FontSize="{TemplateBinding FontSize}"
                                                       Foreground="{DynamicResource DaisyBaseContentBrush}" />
                                            <TextBlock Text="*"
                                                       FontSize="{TemplateBinding ScaledLabelFontSize}"
                                                       Foreground="{DynamicResource DaisyErrorBrush}"
                                                       IsVisible="{TemplateBinding IsRequired}" />
                                            <TextBlock Text="Optional"
                                                       FontSize="{TemplateBinding ScaledLabelFontSize}"
                                                       Opacity="0.7"
                                                       Foreground="{DynamicResource DaisyBaseContentBrush}"
                                                       IsVisible="{TemplateBinding IsOptional}" />
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Reveal Button -->
                                <Button Grid.Column="2"
                                        x:Name="PART_RevealButton"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="8,0"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        IsVisible="{TemplateBinding IsPasswordRevealButtonEnabled}">
                                    <PathIcon x:Name="PART_RevealIcon"
                                              Data="{StaticResource DaisyIconEyeClosed}"
                                              Foreground="{DynamicResource DaisyBaseContentBrush}"
                                              Width="16" Height="16" />
                                </Button>

                                <!-- End Icon -->
                                <PathIcon Grid.Column="3"
                                           x:Name="PART_EndIcon"
                                           Data="{TemplateBinding EndIcon}"
                                           Foreground="{DynamicResource DaisyBaseContentBrush}"
                                           Width="16" Height="16"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"
                                           IsVisible="{TemplateBinding EndIcon, Converter={x:Static ObjectConverters.IsNotNull}}" />
                            </Grid>
                        </Panel>

                        <!-- Row 3: Helper text -->
                        <TextBlock Grid.Row="3"
                                   Text="{TemplateBinding HelperText}"
                                   FontSize="{TemplateBinding ScaledLabelFontSize}"
                                   Opacity="0.7"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Right"
                                   Foreground="{DynamicResource DaisyBaseContentBrush}"
                                   IsVisible="{TemplateBinding HelperText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Floating label animation states (use focus-within since actual focus is on inner TextBox) -->
        <Style Selector="^[LabelPosition=Floating]:focus-within /template/ Border#PART_FloatingLabelContainer, ^[LabelPosition=Floating]:hastext /template/ Border#PART_FloatingLabelContainer">
            <Setter Property="RenderTransform" Value="scale(0.85) translate(0, -24px)" />
            <Setter Property="Opacity" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
        </Style>
        <Style Selector="^[LabelPosition=Floating]:focus-within /template/ TextBlock#PART_FloatingLabel, ^[LabelPosition=Floating]:hastext /template/ TextBlock#PART_FloatingLabel">
            <Setter Property="Foreground" Value="{DynamicResource DaisyPrimaryBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <!-- Show watermark only when focused (label has moved up) -->
        <Style Selector="^[LabelPosition=Floating]:focus-within /template/ TextBlock#PART_Watermark">
            <Setter Property="Opacity" Value="0.5" />
        </Style>

        <!-- Floating label size adjustments -->
        <Style Selector="^[LabelPosition=Floating][Size=ExtraSmall]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisyInputFloatingExtraSmallHeight}" />
        </Style>
        <Style Selector="^[LabelPosition=Floating][Size=Small]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisyInputFloatingSmallHeight}" />
        </Style>
        <Style Selector="^[LabelPosition=Floating][Size=Medium]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisyInputFloatingMediumHeight}" />
        </Style>
        <Style Selector="^[LabelPosition=Floating][Size=Large]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisyInputFloatingLargeHeight}" />
        </Style>
        <Style Selector="^[LabelPosition=Floating][Size=ExtraLarge]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisyInputFloatingExtraLargeHeight}" />
        </Style>

        <!-- Floating label transform adjustments for sizes -->
        <Style Selector="^[LabelPosition=Floating][Size=ExtraSmall]:focus-within /template/ Border#PART_FloatingLabelContainer, ^[LabelPosition=Floating][Size=ExtraSmall]:hastext /template/ Border#PART_FloatingLabelContainer">
            <Setter Property="RenderTransform" Value="scale(0.8) translate(0, -18px)" />
        </Style>
        <Style Selector="^[LabelPosition=Floating][Size=Large]:focus-within /template/ Border#PART_FloatingLabelContainer, ^[LabelPosition=Floating][Size=Large]:hastext /template/ Border#PART_FloatingLabelContainer, ^[LabelPosition=Floating][Size=ExtraLarge]:focus-within /template/ Border#PART_FloatingLabelContainer, ^[LabelPosition=Floating][Size=ExtraLarge]:hastext /template/ Border#PART_FloatingLabelContainer">
            <Setter Property="RenderTransform" Value="scale(0.85) translate(0, -28px)" />
        </Style>

        <!-- Password visible state: show eye open icon -->
        <Style Selector="^:password-visible /template/ PathIcon#PART_RevealIcon">
            <Setter Property="Data" Value="{StaticResource DaisyIconEyeOpen}" />
        </Style>

        <!-- Focus state (use focus-within since actual focus is on inner TextBox) -->
        <Style Selector="^:focus-within /template/ Border#PART_Background">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <!-- Variant: Ghost -->
        <Style Selector="^[Variant=Ghost]">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>
        <Style Selector="^[Variant=Ghost]:focus-within /template/ Border#PART_Background">
            <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
        </Style>

        <!-- Variant: Filled -->
        <Style Selector="^[Variant=Filled]">
            <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
        </Style>
        <Style Selector="^[Variant=Filled] /template/ Border#PART_Background">
            <Setter Property="CornerRadius" Value="8,8,0,0" />
        </Style>

        <!-- Variant: Primary -->
        <Style Selector="^[Variant=Primary]">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
        </Style>
        <Style Selector="^[Variant=Primary]:focus-within /template/ Border#PART_Background">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
        </Style>

        <!-- Variant: Secondary -->
        <Style Selector="^[Variant=Secondary]">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisySecondaryBrush}" />
        </Style>
        <Style Selector="^[Variant=Secondary]:focus-within /template/ Border#PART_Background">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisySecondaryBrush}" />
        </Style>

        <!-- Variant: Accent -->
        <Style Selector="^[Variant=Accent]">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyAccentBrush}" />
        </Style>
        <Style Selector="^[Variant=Accent]:focus-within /template/ Border#PART_Background">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyAccentBrush}" />
        </Style>

        <!-- Variant: Info -->
        <Style Selector="^[Variant=Info]">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyInfoBrush}" />
        </Style>
        <Style Selector="^[Variant=Info]:focus-within /template/ Border#PART_Background">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyInfoBrush}" />
        </Style>

        <!-- Variant: Success -->
        <Style Selector="^[Variant=Success]">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisySuccessBrush}" />
        </Style>
        <Style Selector="^[Variant=Success]:focus-within /template/ Border#PART_Background">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisySuccessBrush}" />
        </Style>

        <!-- Variant: Warning -->
        <Style Selector="^[Variant=Warning]">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyWarningBrush}" />
        </Style>
        <Style Selector="^[Variant=Warning]:focus-within /template/ Border#PART_Background">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyWarningBrush}" />
        </Style>

        <!-- Variant: Error -->
        <Style Selector="^[Variant=Error]">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyErrorBrush}" />
        </Style>
        <Style Selector="^[Variant=Error]:focus-within /template/ Border#PART_Background">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyErrorBrush}" />
        </Style>

        <!-- Size: ExtraSmall -->
        <Style Selector="^[Size=ExtraSmall]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisySizeExtraSmallHeight}" />
            <Setter Property="Padding" Value="{DynamicResource DaisyInputExtraSmallPadding}" />
            <Setter Property="FontSize" Value="{DynamicResource DaisySizeExtraSmallFontSize}" />
            <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeExtraSmallCornerRadius}" />
        </Style>

        <!-- Size: Small -->
        <Style Selector="^[Size=Small]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisySizeSmallHeight}" />
            <Setter Property="Padding" Value="{DynamicResource DaisyInputSmallPadding}" />
            <Setter Property="FontSize" Value="{DynamicResource DaisySizeSmallFontSize}" />
            <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeSmallCornerRadius}" />
        </Style>

        <!-- Size: Large -->
        <Style Selector="^[Size=Large]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisySizeLargeHeight}" />
            <Setter Property="Padding" Value="{DynamicResource DaisyInputLargePadding}" />
            <Setter Property="FontSize" Value="{DynamicResource DaisySizeLargeFontSize}" />
            <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeLargeCornerRadius}" />
        </Style>

        <!-- Size: ExtraLarge -->
        <Style Selector="^[Size=ExtraLarge]">
            <Setter Property="MinHeight" Value="{DynamicResource DaisySizeExtraLargeHeight}" />
            <Setter Property="Padding" Value="{DynamicResource DaisyInputExtraLargePadding}" />
            <Setter Property="FontSize" Value="{DynamicResource DaisySizeExtraLargeFontSize}" />
            <Setter Property="CornerRadius" Value="{DynamicResource DaisySizeExtraLargeCornerRadius}" />
        </Style>

        <!-- Icon sizing for ExtraSmall -->
        <Style Selector="^[Size=ExtraSmall] /template/ PathIcon#PART_StartIcon">
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
            <Setter Property="Margin" Value="6,0,0,0" />
        </Style>
        <Style Selector="^[Size=ExtraSmall] /template/ PathIcon#PART_EndIcon">
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
            <Setter Property="Margin" Value="0,0,6,0" />
        </Style>
        <Style Selector="^[Size=ExtraSmall] /template/ PathIcon#PART_RevealIcon">
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
        </Style>
        <Style Selector="^[Size=ExtraSmall] /template/ Button#PART_RevealButton">
            <Setter Property="Padding" Value="4,0" />
        </Style>

        <!-- Icon sizing for Small -->
        <Style Selector="^[Size=Small] /template/ PathIcon#PART_StartIcon">
            <Setter Property="Width" Value="12" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Margin" Value="8,0,0,0" />
        </Style>
        <Style Selector="^[Size=Small] /template/ PathIcon#PART_EndIcon">
            <Setter Property="Width" Value="12" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>
        <Style Selector="^[Size=Small] /template/ PathIcon#PART_RevealIcon">
            <Setter Property="Width" Value="12" />
            <Setter Property="Height" Value="12" />
        </Style>
        <Style Selector="^[Size=Small] /template/ Button#PART_RevealButton">
            <Setter Property="Padding" Value="6,0" />
        </Style>

        <!-- Icon sizing for Large -->
        <Style Selector="^[Size=Large] /template/ PathIcon#PART_StartIcon">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Margin" Value="14,0,0,0" />
        </Style>
        <Style Selector="^[Size=Large] /template/ PathIcon#PART_EndIcon">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Margin" Value="0,0,14,0" />
        </Style>
        <Style Selector="^[Size=Large] /template/ PathIcon#PART_RevealIcon">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
        </Style>
        <Style Selector="^[Size=Large] /template/ Button#PART_RevealButton">
            <Setter Property="Padding" Value="10,0" />
        </Style>

        <!-- Icon sizing for ExtraLarge -->
        <Style Selector="^[Size=ExtraLarge] /template/ PathIcon#PART_StartIcon">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Margin" Value="16,0,0,0" />
        </Style>
        <Style Selector="^[Size=ExtraLarge] /template/ PathIcon#PART_EndIcon">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Margin" Value="0,0,16,0" />
        </Style>
        <Style Selector="^[Size=ExtraLarge] /template/ PathIcon#PART_RevealIcon">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
        </Style>
        <Style Selector="^[Size=ExtraLarge] /template/ Button#PART_RevealButton">
            <Setter Property="Padding" Value="12,0" />
