<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DaisyUI.Avalonia.Controls;assembly=DaisyUI.Avalonia.NET"
             xmlns:local="clr-namespace:DaisyUI.Avalonia.Gallery.Examples"
             x:Class="DaisyUI.Avalonia.Gallery.Examples.LayoutExamples">

    <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- Drawer -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Drawer" />
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <controls:DaisyButton x:Name="DrawerToggleBtn" Size="Small" Click="DrawerToggleBtn_Click">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <PathIcon Data="{StaticResource DaisyIconHamburger}" Width="16" Height="16"/>
                            <TextBlock Text="Toggle" VerticalAlignment="Center"/>
                        </StackPanel>
                    </controls:DaisyButton>
                </StackPanel>
                <TextBlock Text="A responsive sidebar that can show/hide. Click the hamburger button to toggle." Opacity="0.7" FontSize="12"/>
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <Border BorderBrush="{DynamicResource DaisyBase300Brush}" BorderThickness="1" CornerRadius="8" ClipToBounds="True">
                            <controls:DaisyDrawer x:Name="DemoDrawer" Height="200" Width="500" IsPaneOpen="True">
                                <controls:DaisyDrawer.Pane>
                                    <StackPanel Margin="20" Spacing="10">
                                        <TextBlock Text="Sidebar Menu" FontWeight="Bold"/>
                                        <TextBlock Text="Item 1" />
                                        <TextBlock Text="Item 2" />
                                    </StackPanel>
                                </controls:DaisyDrawer.Pane>
                                <Grid Background="{DynamicResource DaisyBase100Brush}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="Main Content Area" />
                                    </StackPanel>
                                </Grid>
                            </controls:DaisyDrawer>
                        </Border>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Hero -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Hero" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="400">
                        <controls:DaisyHero Background="{DynamicResource DaisyPrimaryBrush}" Height="150" CornerRadius="8">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Hello Hero" FontSize="24" FontWeight="Bold" Foreground="White" />
                                <controls:DaisyButton Content="Get Started" Variant="Secondary" HorizontalAlignment="Center" Margin="0,10,0,0" />
                            </StackPanel>
                        </controls:DaisyHero>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Indicator -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Indicator" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyIndicator>
                            <controls:DaisyIndicator.Badge>
                                <controls:DaisyBadge Variant="Secondary" Content="NEW" />
                            </controls:DaisyIndicator.Badge>
                            <Border Background="{DynamicResource DaisyBase300Brush}" Width="100" Height="100" CornerRadius="8">
                                <TextBlock Text="Content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </controls:DaisyIndicator>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Join -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Join" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyJoin>
                            <Button Content="Join 1" />
                            <Button Content="Join 2" />
                            <Button Content="Join 3" />
                        </controls:DaisyJoin>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Mask -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Mask (Squircle)" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyMask Variant="Squircle">
                            <Border Background="Purple" Width="100" Height="100" />
                        </controls:DaisyMask>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Mockup -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Mockup (Code)" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyMockup Variant="Code" Width="400">
                            <TextBlock Text="npm install daisyui" FontFamily="Consolas" Foreground="White" />
                        </controls:DaisyMockup>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Stack -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Stack" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyStack Width="100" Height="100">
                            <Border Width="80" Height="80" Background="Red" CornerRadius="8"/>
                            <Border Width="80" Height="80" Background="Green" CornerRadius="8"/>
                            <Border Width="80" Height="80" Background="Blue" CornerRadius="8"/>
                        </controls:DaisyStack>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</UserControl>
