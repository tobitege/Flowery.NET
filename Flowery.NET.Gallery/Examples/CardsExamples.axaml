<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET"
    xmlns:services="clr-namespace:Flowery.Services;assembly=Flowery.NET"
    xmlns:local="clr-namespace:Flowery.NET.Gallery.Examples"
    xmlns:galloc="clr-namespace:Flowery.NET.Gallery.Localization"
    x:Class="Flowery.NET.Gallery.Examples.CardsExamples">

    <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled"
        services:FloweryResponsive.IsEnabled="True"
        services:FloweryResponsive.BaseMaxWidth="430">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- Card -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="card" Title="Card" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <TextBlock Text="Basic Card" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <controls:DaisyCard BorderBrush="{DynamicResource DaisyPrimaryBrush}"
                            BorderThickness="2">
                            <StackPanel Spacing="10">
                                <TextBlock Text="Card Title" FontWeight="Bold" FontSize="18"/>
                                <TextBlock Text="This is a simple card component." TextWrapping="Wrap"/>
                                <controls:DaisyButton Content="Action" Variant="Primary" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <TextBlock Text="Card with Image" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <controls:DaisyCard BorderBrush="{DynamicResource DaisyPrimaryBrush}"
                            BorderThickness="2">
                            <StackPanel Spacing="10">
                                <Border Height="120" CornerRadius="8" ClipToBounds="True">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="#667eea" Offset="0"/>
                                            <GradientStop Color="#764ba2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                                              Foreground="White" Opacity="0.3"
                                              Width="80" Height="80"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Featured Card" FontWeight="Bold" FontSize="18"/>
                                <TextBlock Text="A card with a gradient header and icon." TextWrapping="Wrap"/>
                                <controls:DaisyButton Content="Learn More" Variant="Secondary" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <TextBlock Text="Custom Body Padding/Font" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <controls:DaisyCard BodyPadding="16" BodyFontSize="12" TitleFontSize="16"
                            BorderBrush="{DynamicResource DaisyPrimaryBrush}" BorderThickness="2">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Compact Card" FontWeight="Bold"/>
                                <TextBlock Text="This card uses smaller padding and font sizes via BodyPadding, BodyFontSize properties." TextWrapping="Wrap"/>
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Card Styles -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="card-styles" Title="Card Styles" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <TextBlock Text="Beveled (3D Raised)" FontWeight="SemiBold" FontSize="14"
                            Opacity="0.8" />
                        <controls:DaisyCard CardStyle="Beveled" BorderThickness="1">
                            <StackPanel Spacing="10">
                                <TextBlock Text="Beveled Card" FontWeight="Bold" FontSize="18" />
                                <TextBlock Text="Classic 3D raised effect using inset shadows."
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <TextBlock Text="Inset (3D Sunken)" FontWeight="SemiBold" FontSize="14"
                            Opacity="0.8" />
                        <controls:DaisyCard CardStyle="Inset">
                            <StackPanel Spacing="10">
                                <TextBlock Text="Inset Card" FontWeight="Bold" FontSize="18" />
                                <TextBlock Text="3D sunken panel effect with inner shadow."
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="300">
                        <TextBlock Text="Panel (Industrial)" FontWeight="SemiBold" FontSize="14"
                            Opacity="0.8" />
                        <controls:DaisyCard CardStyle="Panel">
                            <StackPanel Spacing="10">
                                <TextBlock Text="Panel Style" FontWeight="Bold" FontSize="18" />
                                <TextBlock Text="Sharp edges and subtle borders for business UI."
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </controls:DaisyCard>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Color Variants -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="card-colors" Title="Color Variants" />
                <WrapPanel Orientation="Horizontal">
                    <controls:DaisyCard ColorVariant="Primary" Width="180" Margin="0,0,12,12">
                        <TextBlock Text="Primary" FontWeight="Bold" HorizontalAlignment="Center" />
                    </controls:DaisyCard>
                    <controls:DaisyCard ColorVariant="Secondary" Width="180" Margin="0,0,12,12">
                        <TextBlock Text="Secondary" FontWeight="Bold" HorizontalAlignment="Center" />
                    </controls:DaisyCard>
                    <controls:DaisyCard ColorVariant="Accent" Width="180" Margin="0,0,12,12">
                        <TextBlock Text="Accent" FontWeight="Bold" HorizontalAlignment="Center" />
                    </controls:DaisyCard>
                    <controls:DaisyCard ColorVariant="Neutral" Width="180" Margin="0,0,12,12">
                        <TextBlock Text="Neutral" FontWeight="Bold" HorizontalAlignment="Center" />
                    </controls:DaisyCard>
                    <controls:DaisyCard ColorVariant="Info" Width="180" Margin="0,0,12,12">
                        <TextBlock Text="Info" FontWeight="Bold" HorizontalAlignment="Center" />
                    </controls:DaisyCard>
                    <controls:DaisyCard ColorVariant="Success" Width="180" Margin="0,0,12,12">
                        <TextBlock Text="Success" FontWeight="Bold" HorizontalAlignment="Center" />
                    </controls:DaisyCard>
                    <controls:DaisyCard ColorVariant="Warning" Width="180" Margin="0,0,12,12">
                        <TextBlock Text="Warning" FontWeight="Bold" HorizontalAlignment="Center" />
                    </controls:DaisyCard>
                    <controls:DaisyCard ColorVariant="Error" Width="180" Margin="0,0,12,12">
                        <TextBlock Text="Error" FontWeight="Bold" HorizontalAlignment="Center" />
                    </controls:DaisyCard>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Sizes -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="card-sizes" Title="Sizes" />
                <WrapPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                    <controls:DaisyCard Size="ExtraSmall" CardStyle="Beveled"
                        controls:FlowerySizeManager.IgnoreGlobalSize="True" Margin="0,0,12,12">
                        <StackPanel MaxWidth="120">
                            <TextBlock Text="Extra Small" FontWeight="Bold"
                                FontSize="{Binding TitleFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                            <TextBlock Text="Compact padding for dense layouts." TextWrapping="Wrap"
                                FontSize="{Binding BodyFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                        </StackPanel>
                    </controls:DaisyCard>
                    <controls:DaisyCard Size="Small" CardStyle="Beveled"
                        controls:FlowerySizeManager.IgnoreGlobalSize="True" Margin="0,0,12,12">
                        <StackPanel MaxWidth="140">
                            <TextBlock Text="Small" FontWeight="Bold"
                                FontSize="{Binding TitleFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                            <TextBlock Text="More breathing room than extra small."
                                TextWrapping="Wrap"
                                FontSize="{Binding BodyFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                        </StackPanel>
                    </controls:DaisyCard>
                    <controls:DaisyCard Size="Medium" CardStyle="Beveled"
                        controls:FlowerySizeManager.IgnoreGlobalSize="True" Margin="0,0,12,12">
                        <StackPanel MaxWidth="160">
                            <TextBlock Text="Medium" FontWeight="Bold"
                                FontSize="{Binding TitleFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                            <TextBlock Text="Default balanced sizing for general use."
                                TextWrapping="Wrap"
                                FontSize="{Binding BodyFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                        </StackPanel>
                    </controls:DaisyCard>
                    <controls:DaisyCard Size="Large" CardStyle="Beveled"
                        controls:FlowerySizeManager.IgnoreGlobalSize="True" Margin="0,0,12,12">
                        <StackPanel MaxWidth="200">
                            <TextBlock Text="Large" FontWeight="Bold"
                                FontSize="{Binding TitleFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                            <TextBlock Text="Generous padding and larger fonts." TextWrapping="Wrap"
                                FontSize="{Binding BodyFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                        </StackPanel>
                    </controls:DaisyCard>
                    <controls:DaisyCard Size="ExtraLarge" CardStyle="Beveled"
                        controls:FlowerySizeManager.IgnoreGlobalSize="True" Margin="0,0,12,12">
                        <StackPanel MaxWidth="240">
                            <TextBlock Text="Extra Large" FontWeight="Bold"
                                FontSize="{Binding TitleFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                            <TextBlock Text="Maximum visual impact with spacious layout."
                                TextWrapping="Wrap"
                                FontSize="{Binding BodyFontSize, RelativeSource={RelativeSource AncestorType=controls:DaisyCard}}" />
                        </StackPanel>
                    </controls:DaisyCard>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Card Stack -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="card-stack" Title="Card Stack" />
                <TextBlock Text="Stacked cards with navigation, showing depth effect." Opacity="0.7"
                    controls:FlowerySizeManager.ResponsiveFont="Primary" />

                <Border Height="450" Background="{DynamicResource DaisyBase200Brush}"
                    CornerRadius="16">
                    <Grid>
                        <Grid x:Name="CardStackContainer" HorizontalAlignment="Center"
                            VerticalAlignment="Center" Width="300" Height="400">
                            <!-- Cards are added/managed in code-behind for the stack effect -->
                        </Grid>
                        <StackPanel Orientation="Horizontal" Spacing="8"
                            HorizontalAlignment="Center" VerticalAlignment="Bottom"
                            Margin="0,0,0,16">
                            <controls:DaisyButton x:Name="PrevCardBtn" Content="←" Size="Small"
                                Click="PrevCard_Click" />
                            <controls:DaisyButton x:Name="NextCardBtn" Content="→" Size="Small"
                                Click="NextCard_Click" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Expandable Cards -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="expandable-cards"
                    Title="{galloc:Localize Showcase_ExpandableCards_Title}" />
                <TextBlock Text="{galloc:Localize Showcase_ExpandableCards_Desc}" Opacity="0.7"
                    controls:FlowerySizeManager.ResponsiveFont="Primary" />

                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled" Padding="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <!-- Item 1: Summer Opening -->
                        <controls:DaisyExpandableCard x:Name="Card1" Margin="0,0,4,0" Padding="0">
                            <!-- Main Content -->
                            <Grid Height="225" Width="150">
                                <Border Classes="card-content" ClipToBounds="True"
                                    CornerRadius="16,0,0,16">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="#0f172a" Offset="0" />
                                            <GradientStop Color="#334155" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <!-- Background Image Placeholder -->
                                    <PathIcon Data="{StaticResource DaisyIconSun}"
                                        Width="75" Height="75"
                                        Foreground="#ffffff20"
                                        HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Margin="0,-20,-20,0" />
                                </Border>

                                <StackPanel VerticalAlignment="Bottom" Margin="12">
                                    <TextBlock Text="Summer" Foreground="White" FontSize="14"
                                        FontWeight="Bold" LineHeight="18" />
                                    <TextBlock Text="Opening" Foreground="White" FontSize="14"
                                        FontWeight="Bold" LineHeight="18" Margin="0,0,0,10" />

                                    <controls:DaisyButton Command="{Binding #Card1.ToggleCommand}"
                                        ButtonStyle="Outline"
                                        Classes="btn-circle"
                                        Foreground="White"
                                        BorderBrush="White"
                                        Padding="8,4"
                                        MinHeight="32">
                                        <controls:DaisyButton.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <PathIcon Data="M8 5v14l11-7z" Width="8" Height="8" />
                                                <TextBlock Text="Play" FontSize="12" />
                                            </StackPanel>
                                        </controls:DaisyButton.Content>
                                    </controls:DaisyButton>
                                </StackPanel>
                            </Grid>

                            <!-- Expanded Content -->
                            <controls:DaisyExpandableCard.ExpandedContent>
                                <Border Width="150" Background="#111827" Padding="16" Height="225"
                                    CornerRadius="0,16,16,0">
                                    <StackPanel Spacing="8" VerticalAlignment="Center">
                                        <TextBlock Text="Join us for the Summer Opening event."
                                            Foreground="#9ca3af"
                                            TextWrapping="Wrap"
                                            FontSize="10"
                                            LineHeight="14" />

                                        <StackPanel Orientation="Horizontal" Spacing="6"
                                            Margin="0,12,0,0">
                                            <controls:DaisyAvatar Size="Small" Shape="Circle"
                                                Width="24" Height="24">
                                                <controls:DaisyAvatar.Content>
                                                    <TextBlock Text="FK" FontSize="10"
                                                        FontWeight="Bold" />
                                                </controls:DaisyAvatar.Content>
                                            </controls:DaisyAvatar>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="Freddy K." Foreground="White"
                                                    FontWeight="Bold" FontSize="10" />
                                                <TextBlock Text="CEO" Foreground="#6b7280"
                                                    FontSize="9" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </controls:DaisyExpandableCard.ExpandedContent>
                        </controls:DaisyExpandableCard>

                        <!-- Item 2: Fashion -->
                        <controls:DaisyExpandableCard x:Name="Card2" Margin="0,0,4,0" Padding="0">
                            <!-- Main Content -->
                            <Grid Height="225" Width="150">
                                <Border Classes="card-content" ClipToBounds="True"
                                    CornerRadius="16,0,0,16">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="#7c3aed" Offset="0" />
                                            <GradientStop Color="#c026d3" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <PathIcon Data="{StaticResource DaisyIconCard}"
                                        Width="60" Height="60"
                                        Foreground="#ffffff30"
                                        HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <StackPanel VerticalAlignment="Bottom" Margin="12">
                                    <TextBlock Text="Fashion" Foreground="White" FontSize="16"
                                        FontWeight="Bold" Margin="0,0,0,10" />

                                    <controls:DaisyButton Command="{Binding #Card2.ToggleCommand}"
                                        ButtonStyle="Outline"
                                        Classes="btn-circle"
                                        Foreground="White"
                                        BorderBrush="White"
                                        Padding="8,4"
                                        MinHeight="32">
                                        <controls:DaisyButton.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <PathIcon Data="M8 5v14l11-7z" Width="8" Height="8" />
                                                <TextBlock Text="Play" FontSize="12" />
                                            </StackPanel>
                                        </controls:DaisyButton.Content>
                                    </controls:DaisyButton>
                                </StackPanel>
                            </Grid>

                            <!-- Expanded Content -->
                            <controls:DaisyExpandableCard.ExpandedContent>
                                <Border Width="150" Background="#111827" Padding="16" Height="225"
                                    CornerRadius="0,16,16,0">
                                    <StackPanel Spacing="8" VerticalAlignment="Center">
                                        <TextBlock
                                            Text="Discover the latest trends in our Fashion Week coverage."
                                            Foreground="#9ca3af"
                                            TextWrapping="Wrap"
                                            FontSize="10"
                                            LineHeight="14" />

                                        <controls:DaisyButton Content="View" Variant="Primary"
                                            Margin="0,8,0,0" Width="80" HorizontalAlignment="Left"
                                            Size="Small" FontSize="10" />
                                    </StackPanel>
                                </Border>
                            </controls:DaisyExpandableCard.ExpandedContent>
                        </controls:DaisyExpandableCard>

                        <!-- Item 3: Gallery Art -->
                        <controls:DaisyExpandableCard x:Name="Card3" Margin="0,0,4,0" Padding="0">
                            <!-- Main Content -->
                            <Grid Height="225" Width="150">
                                <Border Classes="card-content" ClipToBounds="True"
                                    CornerRadius="16,0,0,16">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="#d97706" Offset="0" />
                                            <GradientStop Color="#b45309" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <PathIcon Data="{StaticResource DaisyIconImage}"
                                        Width="60" Height="60"
                                        Foreground="#ffffff30"
                                        HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <StackPanel VerticalAlignment="Bottom" Margin="12">
                                    <TextBlock Text="Gallery Art" Foreground="White" FontSize="16"
                                        FontWeight="Bold" Margin="0,0,0,10" />

                                    <controls:DaisyButton Command="{Binding #Card3.ToggleCommand}"
                                        ButtonStyle="Outline"
                                        Classes="btn-circle"
                                        Foreground="White"
                                        BorderBrush="White"
                                        Padding="8,4"
                                        MinHeight="32">
                                        <controls:DaisyButton.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <PathIcon Data="M8 5v14l11-7z" Width="8" Height="8" />
                                                <TextBlock Text="Play" FontSize="12" />
                                            </StackPanel>
                                        </controls:DaisyButton.Content>
                                    </controls:DaisyButton>
                                </StackPanel>
                            </Grid>

                            <!-- Expanded Content -->
                            <controls:DaisyExpandableCard.ExpandedContent>
                                <Border Width="150" Background="#111827" Padding="16" Height="225"
                                    CornerRadius="0,16,16,0">
                                    <StackPanel Spacing="8" VerticalAlignment="Center">
                                        <TextBlock
                                            Text="Immerse yourself in the world of contemporary art."
                                            Foreground="#9ca3af"
                                            TextWrapping="Wrap"
                                            FontSize="10"
                                            LineHeight="14" />

                                        <controls:DaisyButton Content="Explore" Variant="Primary"
                                            Margin="0,8,0,0" Width="80" HorizontalAlignment="Left"
                                            Size="Small" FontSize="10" />
                                    </StackPanel>
                                </Border>
                            </controls:DaisyExpandableCard.ExpandedContent>
                        </controls:DaisyExpandableCard>

                        <!-- Item 4: Dreams -->
                        <controls:DaisyExpandableCard x:Name="Card4" Margin="0,0,4,0" Padding="0">
                            <!-- Main Content -->
                            <Grid Height="225" Width="150">
                                <Border Classes="card-content" ClipToBounds="True"
                                    CornerRadius="16,0,0,16">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="#db2777" Offset="0" />
                                            <GradientStop Color="#be185d" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <PathIcon Data="{StaticResource DaisyIconStar}"
                                        Width="60" Height="60"
                                        Foreground="#ffffff30"
                                        HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <StackPanel VerticalAlignment="Bottom" Margin="12">
                                    <TextBlock Text="Dreams" Foreground="White" FontSize="16"
                                        FontWeight="Bold" Margin="0,0,0,10" />

                                    <controls:DaisyButton Command="{Binding #Card4.ToggleCommand}"
                                        ButtonStyle="Outline"
                                        Classes="btn-circle"
                                        Foreground="White"
                                        BorderBrush="White"
                                        Padding="8,4"
                                        MinHeight="32">
                                        <controls:DaisyButton.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <PathIcon Data="M8 5v14l11-7z" Width="8" Height="8" />
                                                <TextBlock Text="Play" FontSize="12" />
                                            </StackPanel>
                                        </controls:DaisyButton.Content>
                                    </controls:DaisyButton>
                                </StackPanel>
                            </Grid>

                            <!-- Expanded Content -->
                            <controls:DaisyExpandableCard.ExpandedContent>
                                <Border Width="150" Background="#111827" Padding="16" Height="225"
                                    CornerRadius="0,16,16,0">
                                    <StackPanel Spacing="8" VerticalAlignment="Center">
                                        <TextBlock
                                            Text="Explore the surreal landscapes of our dreams."
                                            Foreground="#9ca3af"
                                            TextWrapping="Wrap"
                                            FontSize="10"
                                            LineHeight="14" />

                                        <controls:DaisyButton Content="Start" Variant="Primary"
                                            Margin="0,8,0,0" Width="80" HorizontalAlignment="Left"
                                            Size="Small" FontSize="10" />
                                    </StackPanel>
                                </Border>
                            </controls:DaisyExpandableCard.ExpandedContent>
                        </controls:DaisyExpandableCard>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- DaisyExpandableCard (Batteries-Included Mode) -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="expandable-batteries"
                    Title="Expandable Card (Batteries-Included)" />
                <TextBlock
                    Text="Automatic UI generation from convenience properties (Title, Subtitle, Gradient, Icon)."
                    Opacity="0.7" controls:FlowerySizeManager.ResponsiveFont="Primary" />

                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled" Padding="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <controls:DaisyExpandableCard
                            UseBatteriesIncludedMode="True"
                            Title="Summer"
                            Subtitle="Opening"
                            GradientStart="#0f172a"
                            GradientEnd="#334155"
                            ExpandedText="Join us for the Summer Opening event featuring live music and networking."
                            ExpandedSubtitle="Freddy K. - CEO"
                            IconData="{StaticResource DaisyIconSun}"
                            Margin="0,0,4,0" />

                        <controls:DaisyExpandableCard
                            UseBatteriesIncludedMode="True"
                            Title="Fashion"
                            Subtitle="Week 2026"
                            GradientStart="#7c3aed"
                            GradientEnd="#c026d3"
                            ExpandedText="The most awaited fashion event of the year. Experience the latest trends."
                            ExpandedSubtitle="Runway A - 10:00 PM"
                            IconData="{StaticResource DaisyIconCard}"
                            Margin="0,0,4,0" />

                        <controls:DaisyExpandableCard
                            UseBatteriesIncludedMode="True"
                            Title="Travel"
                            Subtitle="Adventure"
                            GradientStart="#10b981"
                            GradientEnd="#059669"
                            ExpandedText="Explore new horizons. Special discounts for early birds."
                            ExpandedSubtitle="Destination: Alps"
                            IconData="{StaticResource DaisyIconHome}"
                            Margin="0,0,4,0" />
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Patterned Cards -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="patterned-card" Title="Patterned Card" />
                <TextBlock
                    Text="DaisyPatternedCard adds decorative background patterns and ornaments."
                    Opacity="0.7" controls:FlowerySizeManager.ResponsiveFont="Primary" />

                <WrapPanel Orientation="Horizontal">
                    <controls:DaisyPatternedCard Pattern="CarbonFiber" ColorVariant="Neutral"
                        Width="280" Height="180" Margin="0,0,20,20" Ornament="Industrial">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="CARBON FIBER" FontWeight="Black" FontSize="20"
                                HorizontalAlignment="Center" />
                            <TextBlock Text="Industrial Tech" Opacity="0.8"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </controls:DaisyPatternedCard>

                    <controls:DaisyPatternedCard Pattern="Honeycomb" Background="#000000"
                        Foreground="#FFD700" Width="280" Height="180" Margin="0,0,20,20"
                        Ornament="Corners">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="HONEYCOMB" FontWeight="Black" FontSize="20"
                                HorizontalAlignment="Center" />
                            <TextBlock Text="Science &amp; Tech" Opacity="0.8"
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </controls:DaisyPatternedCard>

                    <controls:DaisyPatternedCard Pattern="Circuit" ColorVariant="Secondary"
                        Width="280" Height="180" Margin="0,0,20,20" Ornament="Brackets">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="CIRCUIT" FontWeight="Black" FontSize="20"
                                HorizontalAlignment="Center" />
                            <TextBlock Text="Cyberpunk Style" Opacity="0.8"
                                HorizontalAlignment="Center" />
