<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET"
    xmlns:services="clr-namespace:Flowery.Services;assembly=Flowery.NET"
    xmlns:local="clr-namespace:Flowery.NET.Gallery.Examples"
    x:Class="Flowery.NET.Gallery.Examples.DateDisplayExamples"
    x:DataType="local:DateDisplayExamples">

    <Grid>
        <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled"
            services:FloweryResponsive.IsEnabled="True"
            services:FloweryResponsive.BaseMaxWidth="430">
            <StackPanel Spacing="24" Margin="24,0,24,32">

                <!-- Date Timeline -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="date-timeline" Title="Date Timeline" />
                    <TextBlock
                        Text="A horizontal scrollable date picker inspired by FadyFayezYounan's easy_date_timeline."
                        Margin="0,0,0,8" />
                    <WrapPanel Orientation="Horizontal">
                        <!-- Basic -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Basic (MonthYear Header)" FontWeight="SemiBold" />
                            <controls:DaisyDateTimeline Width="400" />
                        </StackPanel>

                        <!-- With Switcher -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Switcher Header (Navigate Months)"
                                FontWeight="SemiBold" />
                            <controls:DaisyDateTimeline Width="400" HeaderType="Switcher" />
                        </StackPanel>

                        <!-- No Header -->
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="No Header" FontWeight="SemiBold" />
                            <controls:DaisyDateTimeline Width="400" HeaderType="None" />
                        </StackPanel>
                    </WrapPanel>

                    <!-- Sizes -->
                    <TextBlock Text="Sizes" FontWeight="Bold" Margin="0,8,0,4" />
                    <WrapPanel Orientation="Horizontal"
                        controls:FlowerySizeManager.IgnoreGlobalSize="True">
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Extra Small" FontSize="12" />
                            <controls:DaisyDateTimeline AutoWidth="True" VisibleDaysCount="7"
                                Size="ExtraSmall"
                                HeaderType="None" />
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Small" FontSize="12" />
                            <controls:DaisyDateTimeline AutoWidth="True" VisibleDaysCount="7"
                                Size="Small" HeaderType="None" />
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Medium (Default)" FontSize="12" />
                            <controls:DaisyDateTimeline AutoWidth="True" VisibleDaysCount="7"
                                Size="Medium" HeaderType="None" />
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Large" FontSize="12" />
                            <controls:DaisyDateTimeline AutoWidth="True" VisibleDaysCount="7"
                                Size="Large" HeaderType="None" />
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Extra Large" FontSize="12" />
                            <controls:DaisyDateTimeline AutoWidth="True" VisibleDaysCount="7"
                                Size="ExtraLarge"
                                HeaderType="None" />
                        </StackPanel>
                    </WrapPanel>

                    <!-- Disable Strategies -->
                    <TextBlock Text="Disable Strategies" FontWeight="Bold" Margin="0,8,0,4" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Disable Before Today" FontSize="12" />
                            <controls:DaisyDateTimeline Width="350" Size="Small" HeaderType="None"
                                DisableStrategy="BeforeToday" />
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Disable After Today" FontSize="12" />
                            <controls:DaisyDateTimeline Width="350" Size="Small" HeaderType="None"
                                DisableStrategy="AfterToday" />
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="All Disabled (Read-Only)" FontSize="12" />
                            <controls:DaisyDateTimeline Width="350" Size="Small" HeaderType="None"
                                DisableStrategy="All" />
                        </StackPanel>
                    </WrapPanel>

                    <!-- Display Elements -->
                    <TextBlock Text="Display Elements" FontWeight="Bold" Margin="0,8,0,4" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Default (All)" FontSize="12" />
                            <controls:DaisyDateTimeline Width="300" Size="Small" HeaderType="None"
                                DisplayElements="Default" />
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Compact (Day + Number)" FontSize="12" />
                            <controls:DaisyDateTimeline Width="300" Size="Small" HeaderType="None"
                                DisplayElements="Compact" />
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Number Only" FontSize="12" />
                            <controls:DaisyDateTimeline Width="240" Size="Small" HeaderType="None"
                                DisplayElements="NumberOnly" ItemWidth="48" ItemSpacing="4" />
                        </StackPanel>
                    </WrapPanel>

                    <!-- Layout Modes -->
                    <TextBlock Text="Layout Modes" FontWeight="Bold" Margin="0,8,0,4" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Vertical (Default)" FontSize="12" />
                            <controls:DaisyDateTimeline AutoWidth="True" VisibleDaysCount="7"
                                Size="Medium" HeaderType="None"
                                ItemLayout="Vertical" />
                        </StackPanel>
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Horizontal (Landscape)" FontSize="12" />
                            <controls:DaisyDateTimeline AutoWidth="True" VisibleDaysCount="5"
                                Size="Medium" HeaderType="None"
                                ItemLayout="Horizontal" ItemWidth="110" />
                        </StackPanel>
                    </WrapPanel>

                    <!-- Combined Example -->
                    <TextBlock Text="Real-World Usage" FontWeight="Bold" Margin="0,8,0,4" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" Margin="0,0,40,20">
                            <TextBlock Text="Booking Widget with Events" FontSize="12" />
                            <controls:DaisyCard Width="420" Padding="8">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Select Appointment Date" FontWeight="SemiBold" />
                                    <TextBlock
                                        Text="Click date • Enter to confirm • Esc to go to today"
                                        FontSize="11"
                                        Foreground="{DynamicResource DaisyNeutralContentBrush}" />
                                    <controls:DaisyDateTimeline x:Name="BookingTimeline"
                                        HeaderType="Switcher" Size="Medium"
                                        DisableStrategy="BeforeToday" />
                                </StackPanel>
                            </controls:DaisyCard>
                        </StackPanel>
                    </WrapPanel>

                    <!-- Full Width Example -->
                    <TextBlock Text="Full Width" FontWeight="Bold" Margin="0,8,0,4" />
                    <StackPanel Spacing="10">
                        <TextBlock Text="Stretches to fill available width (no fixed Width set)"
                            FontSize="12" />
                        <controls:DaisyDateTimeline
                            HeaderType="Switcher"
                            Size="Medium"
                            HorizontalAlignment="Stretch" />
                    </StackPanel>
                </StackPanel>

                <controls:DaisyDivider />

                <!-- Timeline -->
                <StackPanel Spacing="12">
                    <local:SectionHeader SectionId="timeline" Title="Timeline" />
                    <WrapPanel Orientation="Horizontal">
                        <StackPanel Spacing="8" Margin="0,0,40,20">
                            <TextBlock Text="Horizontal" Opacity="0.7" controls:FlowerySizeManager.ResponsiveFont="Primary" />
                            <controls:DaisyTimeline Orientation="Horizontal">
                                <controls:DaisyTimelineItem StartContent="1984"
                                    EndContent="First Mac" HasEndLine="True" IsActive="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Foreground="{DynamicResource DaisyPrimaryBrush}"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                                <controls:DaisyTimelineItem StartContent="1998" EndContent="iMac"
                                    HasStartLine="True" HasEndLine="True" IsActive="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Foreground="{DynamicResource DaisyPrimaryBrush}"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                                <controls:DaisyTimelineItem StartContent="2007" EndContent="iPhone"
                                    HasStartLine="True" HasEndLine="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                                <controls:DaisyTimelineItem StartContent="2015"
                                    EndContent="Apple Watch" HasStartLine="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                            </controls:DaisyTimeline>
                        </StackPanel>

                        <StackPanel Spacing="8" Margin="0,0,40,20">
                            <TextBlock Text="Vertical with Boxes" Opacity="0.7" controls:FlowerySizeManager.ResponsiveFont="Primary" />
                            <controls:DaisyTimeline Orientation="Vertical">
                                <controls:DaisyTimelineItem StartContent="1984"
                                    EndContent="First Macintosh" IsBoxed="True" HasEndLine="True"
                                    IsActive="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Foreground="{DynamicResource DaisyPrimaryBrush}"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                                <controls:DaisyTimelineItem StartContent="1998" EndContent="iMac"
                                    IsBoxed="True" HasStartLine="True" HasEndLine="True"
                                    IsActive="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Foreground="{DynamicResource DaisyPrimaryBrush}"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                                <controls:DaisyTimelineItem StartContent="2001" EndContent="iPod"
                                    IsBoxed="True" HasStartLine="True" HasEndLine="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                                <controls:DaisyTimelineItem StartContent="2007" EndContent="iPhone"
                                    IsBoxed="True" HasStartLine="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                            </controls:DaisyTimeline>
                        </StackPanel>

                        <StackPanel Spacing="8" Margin="0,0,40,20">
                            <TextBlock Text="Compact (end only)" Opacity="0.7" controls:FlowerySizeManager.ResponsiveFont="Primary" />
                            <controls:DaisyTimeline Orientation="Vertical" IsCompact="True">
                                <controls:DaisyTimelineItem EndContent="First Macintosh"
                                    IsBoxed="True" HasEndLine="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                                <controls:DaisyTimelineItem EndContent="iMac" IsBoxed="True"
                                    HasStartLine="True" HasEndLine="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                                <controls:DaisyTimelineItem EndContent="iPod" IsBoxed="True"
                                    HasStartLine="True" HasEndLine="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                                <controls:DaisyTimelineItem EndContent="iPhone" IsBoxed="True"
                                    HasStartLine="True">
                                    <controls:DaisyTimelineItem.MiddleContent>
                                        <PathIcon Width="16" Height="16"
                                            Data="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" />
                                    </controls:DaisyTimelineItem.MiddleContent>
                                </controls:DaisyTimelineItem>
                            </controls:DaisyTimeline>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Toast overlay at view level -->
        <controls:DaisyToast x:Name="BookingToast"
            VerticalAlignment="Bottom" HorizontalAlignment="Right"
            Margin="0,0,24,24" />
    </Grid>

</UserControl>
