<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET"
    xmlns:services="clr-namespace:Flowery.Services;assembly=Flowery.NET"
    xmlns:local="clr-namespace:Flowery.NET.Gallery.Examples"
    x:Class="Flowery.NET.Gallery.Examples.LayoutExamples">

    <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Disabled"
        services:FloweryResponsive.IsEnabled="True"
        services:FloweryResponsive.BaseMaxWidth="430">
        <StackPanel Spacing="24" Margin="24,0,24,32">

            <!-- Drawer -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="drawer" Title="Drawer" />
                <TextBlock Text="A sliding sidebar panel for navigation menus or auxiliary content. Toggle between overlay mode (content is covered) and inline mode (content is pushed aside). The drawer automatically opens in responsive layouts when sufficient width is available."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource DaisyBaseContentBrush}" />

                <StackPanel Spacing="10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <controls:DaisyButton Content="Toggle drawer" Variant="Primary" Click="DrawerToggleBtn_Click" />
                        <controls:DaisyButton Content="Close" Variant="Ghost" Click="DrawerCloseBtn_Click" />
                    </StackPanel>

                    <controls:DaisyCheckBox Content="Overlay mode"
                                            IsChecked="{Binding OverlayMode, ElementName=DemoDrawer, Mode=TwoWay}" />

                    <Border BorderBrush="{DynamicResource DaisyBase300Brush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            HorizontalAlignment="Stretch"
                            Background="{DynamicResource DaisyBase100Brush}">
                        <controls:DaisyDrawer x:Name="DemoDrawer"
                                              OverlayMode="False"
                                              ResponsiveMode="True"
                                              ResponsiveThreshold="500"
                                              DrawerWidth="180"
                                              Height="260"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch">
                            <controls:DaisyDrawer.Pane>
                                <Border Background="{DynamicResource DaisyBase200Brush}"
                                        Padding="12"
                                        Width="180">
                                    <StackPanel Spacing="10">
                                        <TextBlock Text="Navigation" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource DaisyBaseContentBrush}" />
                                        <controls:DaisyMenu>
                                            <ListBoxItem Content="Dashboard" IsSelected="True" />
                                            <ListBoxItem Content="Billing" />
                                            <ListBoxItem Content="Settings" />
                                            <ListBoxItem Content="Help" />
                                        </controls:DaisyMenu>
                                    </StackPanel>
                                </Border>
                            </controls:DaisyDrawer.Pane>

                            <controls:DaisyDrawer.Content>
                                <Border Background="{DynamicResource DaisyBase100Brush}"
                                        Padding="16"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch">
                                    <StackPanel Spacing="8" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="Main Content Area"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource DaisyBaseContentBrush}" />
                                        <TextBlock Text="Resize window to see drawer auto-open/close."
                                                   Opacity="0.7"
                                                   TextWrapping="Wrap"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource DaisyBaseContentBrush}" />
                                    </StackPanel>
                                </Border>
                            </controls:DaisyDrawer.Content>
                        </controls:DaisyDrawer>
                    </Border>
                </StackPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Hero -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="hero" Title="Hero" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20" Width="400">
                        <controls:DaisyHero Background="{DynamicResource DaisyPrimaryBrush}" Height="150" CornerRadius="8">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Hello Hero" FontSize="24" FontWeight="Bold" Foreground="White" />
                                <controls:DaisyButton Content="Get Started" Variant="Secondary" HorizontalAlignment="Center" Margin="0,10,0,0" />
                            </StackPanel>
                        </controls:DaisyHero>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Indicator -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="indicator" Title="Indicator" />
                <TextBlock Text="Badge overlay that can be aligned to any corner/edge."
                           Opacity="0.7"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource DaisyBaseContentBrush}" />

                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,24,16">
                        <controls:DaisyIndicator>
                            <controls:DaisyIndicator.Marker>
                                <controls:DaisyBadge Content="NEW" Variant="Warning" />
                            </controls:DaisyIndicator.Marker>
                            <controls:DaisyCard CardStyle="Beveled"
                                                BorderThickness="1"
                                                MinWidth="160"
                                                MinHeight="80"
                                                Size="Medium" />
                        </controls:DaisyIndicator>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,24,16">
                        <controls:DaisyIndicator MarkerPosition="TopLeft">
                            <controls:DaisyIndicator.Marker>
                                <controls:DaisyBadge Content="SALE" Variant="Error" />
                            </controls:DaisyIndicator.Marker>
                            <controls:DaisyCard CardStyle="Beveled"
                                                BorderThickness="1"
                                                MinWidth="160"
                                                MinHeight="80"
                                                Size="Medium" />
                        </controls:DaisyIndicator>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,24,16">
                        <controls:DaisyIndicator MarkerPosition="BottomRight">
                            <controls:DaisyIndicator.Marker>
                                <controls:DaisyBadge Variant="Success"
                                                     CornerRadius="6"
                                                     Padding="0"
                                                     Width="12"
                                                     Height="12"
                                                     MinWidth="12"
                                                     MinHeight="12" />
                            </controls:DaisyIndicator.Marker>
                            <controls:DaisyAvatar Size="Large"
                                                  Background="{DynamicResource DaisyPrimaryBrush}"
                                                  controls:FlowerySizeManager.IgnoreGlobalSize="True">
                                <TextBlock Text="JD"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource DaisyPrimaryContentBrush}" />
                            </controls:DaisyAvatar>
                        </controls:DaisyIndicator>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,24,16">
                        <controls:DaisyIndicator MarkerAlignment="Edge">
                            <controls:DaisyIndicator.Marker>
                                <controls:DaisyBadge Content="9+" Variant="Error" Size="ExtraSmall" />
                            </controls:DaisyIndicator.Marker>
                            <controls:DaisyButton Variant="Secondary" Size="Large" Shape="Circle">
                                <PathIcon Data="{StaticResource DaisyIconMail}" Width="16" Height="16" />
                            </controls:DaisyButton>
                        </controls:DaisyIndicator>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,24,16">
                        <controls:DaisyIndicator MarkerPosition="BottomRight" MarkerAlignment="Edge">
                            <controls:DaisyIndicator.Marker>
                                <controls:DaisyBadge Content="3" Variant="Secondary" Size="Small" />
                            </controls:DaisyIndicator.Marker>
                            <controls:DaisyButton Content="Inbox" Variant="Primary" Size="Large" />
                        </controls:DaisyIndicator>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Join -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="join" Title="Join" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,20,20">
                        <TextBlock Text="Buttons" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <controls:DaisyJoin>
                            <controls:DaisyButton Content="Join" />
                            <controls:DaisyButton Content="Item" />
                            <controls:DaisyButton Content="Here" />
                        </controls:DaisyJoin>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,20,20">
                        <TextBlock Text="Inputs" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <controls:DaisyJoin>
                            <controls:DaisyInput Width="160" Text="Search" />
                            <controls:DaisySelect Width="140" SelectedIndex="0">
                                <x:String>All</x:String>
                                <x:String>Images</x:String>
                                <x:String>Videos</x:String>
                            </controls:DaisySelect>
                            <controls:DaisyButton Variant="Primary" Content="Go" />
                        </controls:DaisyJoin>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,0,20,20">
                        <TextBlock Text="Vertical" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                        <controls:DaisyJoin Orientation="Vertical">
                            <controls:DaisyButton Content="Top" />
                            <controls:DaisyButton Content="Middle" />
                            <controls:DaisyButton Content="Bottom" />
                        </controls:DaisyJoin>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Mask -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="mask" Title="Mask (Squircle)" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyMask Variant="Squircle">
                            <Border Background="Purple" Width="100" Height="100" />
                        </controls:DaisyMask>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Mockup Code -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="mockup" Title="Mockup (Code)" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyMockup Variant="Code" Width="400">
                            <TextBlock Text="npm install daisyui" FontFamily="Consolas" Foreground="White" />
                        </controls:DaisyMockup>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Mockup Window -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Mockup (Window)" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyMockup Variant="Window" Width="400" Height="200">
                            <TextBlock Text="Window Content" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </controls:DaisyMockup>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Mockup Browser with border -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Mockup (Browser with border)" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyMockup Variant="Browser" Width="500" Url="https://daisyui.com">
                            <Grid Height="200">
                                <TextBlock Text="Hello!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" />
                            </Grid>
                        </controls:DaisyMockup>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Mockup Browser with background color -->
            <StackPanel Spacing="12">
                <local:SectionHeader Title="Mockup (Browser with background)" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Spacing="10" Margin="0,0,40,20">
                        <controls:DaisyMockup Variant="Browser" Width="500" Url="https://avalonia.net" Background="{DynamicResource DaisyBase200Brush}">
                            <Grid Height="200" Background="{DynamicResource DaisyBase100Brush}">
                                <TextBlock Text="Avalonia UI Content" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" />
                            </Grid>
                        </controls:DaisyMockup>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Stack -->
            <StackPanel Spacing="12">
                <local:SectionHeader SectionId="stack" Title="Stack" />

                <TextBlock Text="Static Stack (deck-of-cards effect)" FontWeight="SemiBold" FontSize="14" Opacity="0.8"/>
                <WrapPanel Orientation="Horizontal">
                    <Border Padding="20" Margin="0,0,30,20">
                        <controls:DaisyStack>
                            <Border Width="100" Height="70" Background="#F87171" CornerRadius="8">
                                <TextBlock Text="Card 1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                            <Border Width="100" Height="70" Background="#34D399" CornerRadius="8">
                                <TextBlock Text="Card 2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                            <Border Width="100" Height="70" Background="#60A5FA" CornerRadius="8">
                                <TextBlock Text="Card 3" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                        </controls:DaisyStack>
                    </Border>
                    <Border Padding="20" Margin="0,0,30,20">
                        <controls:DaisyStack>
                            <Image
                                Source="avares://Flowery.NET.Gallery/Assets/wallpaper_blue.jpg"
                                Width="120" Height="80" Stretch="UniformToFill" />
                            <Image
                                Source="avares://Flowery.NET.Gallery/Assets/wallpaper_red.jpg"
                                Width="120" Height="80" Stretch="UniformToFill" />
                            <Image
                                Source="avares://Flowery.NET.Gallery/Assets/wallpaper_green.jpg"
                                Width="120" Height="80" Stretch="UniformToFill" />
                        </controls:DaisyStack>
                    </Border>
                </WrapPanel>

                <TextBlock Text="With Navigation" FontWeight="SemiBold" FontSize="14" Opacity="0.8" Margin="0,12,0,0"/>
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,30,20">
                        <TextBlock Text="Horizontal" Opacity="0.6" Margin="0,0,0,8" controls:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <controls:DaisyStack Width="200" Height="120" ShowNavigation="True" ShowCounter="True">
                            <Image
                                Source="avares://Flowery.NET.Gallery/Assets/wallpaper_blue.jpg"
                                Stretch="UniformToFill" />
                            <Image
                                Source="avares://Flowery.NET.Gallery/Assets/wallpaper_red.jpg"
                                Stretch="UniformToFill" />
                            <Image
                                Source="avares://Flowery.NET.Gallery/Assets/wallpaper_green.jpg"
                                Stretch="UniformToFill" />
                        </controls:DaisyStack>
                    </StackPanel>
                    <StackPanel Margin="0,0,30,20">
                        <TextBlock Text="Vertical" Opacity="0.6" Margin="0,0,0,8" controls:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <controls:DaisyStack Width="200" Height="140" ShowNavigation="True" ShowCounter="True"
                                             NavigationPlacement="Vertical" CounterPlacement="End">
                            <Border Background="#A78BFA" CornerRadius="8">
                                <TextBlock Text="Card A" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="18"/>
                            </Border>
                            <Border Background="#F472B6" CornerRadius="8">
                                <TextBlock Text="Card B" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="18"/>
                            </Border>
                            <Border Background="#FBBF24" CornerRadius="8">
                                <TextBlock Text="Card C" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontSize="18"/>
                            </Border>
                        </controls:DaisyStack>
                    </StackPanel>
                </WrapPanel>

                <TextBlock Text="Navigation Colors" FontWeight="SemiBold" FontSize="14" Opacity="0.8" Margin="0,12,0,0"/>
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,20">
                        <controls:DaisyStack Width="160" Height="90" ShowNavigation="True" NavigationColor="Primary">
                            <Border Background="{DynamicResource DaisyBase300Brush}" CornerRadius="8">
                                <TextBlock Text="Primary" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8">
                                <TextBlock Text="Buttons" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </controls:DaisyStack>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,20">
                        <controls:DaisyStack Width="160" Height="90" ShowNavigation="True" NavigationColor="Secondary">
                            <Border Background="{DynamicResource DaisyBase300Brush}" CornerRadius="8">
                                <TextBlock Text="Secondary" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8">
                                <TextBlock Text="Buttons" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </controls:DaisyStack>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,20">
                        <controls:DaisyStack Width="160" Height="90" ShowNavigation="True" NavigationColor="Accent">
                            <Border Background="{DynamicResource DaisyBase300Brush}" CornerRadius="8">
                                <TextBlock Text="Accent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="{DynamicResource DaisyBase200Brush}" CornerRadius="8">
                                <TextBlock Text="Buttons" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </controls:DaisyStack>
                    </StackPanel>
                </WrapPanel>

                <TextBlock Text="Counter Placements" FontWeight="SemiBold" FontSize="14" Opacity="0.8" Margin="0,12,0,0"/>
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,20">
                        <TextBlock Text="Bottom" Opacity="0.6" Margin="0,0,0,4" controls:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <controls:DaisyStack Width="130" Height="70" ShowNavigation="True" ShowCounter="True" CounterPlacement="Bottom">
                            <Border Background="#818CF8" CornerRadius="4"/>
                            <Border Background="#6366F1" CornerRadius="4"/>
                        </controls:DaisyStack>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,20">
                        <TextBlock Text="Top" Opacity="0.6" Margin="0,0,0,4" controls:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <controls:DaisyStack Width="130" Height="70" ShowNavigation="True" ShowCounter="True" CounterPlacement="Top">
                            <Border Background="#2DD4BF" CornerRadius="4"/>
                            <Border Background="#14B8A6" CornerRadius="4"/>
                        </controls:DaisyStack>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,20">
                        <TextBlock Text="End" Opacity="0.6" Margin="0,0,0,4" controls:FlowerySizeManager.ResponsiveFont="Secondary" />
                        <controls:DaisyStack Width="130" Height="70" ShowNavigation="True" ShowCounter="True" CounterPlacement="End">
                            <Border Background="#FB923C" CornerRadius="4"/>
                            <Border Background="#F97316" CornerRadius="4"/>
                        </controls:DaisyStack>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</UserControl>
