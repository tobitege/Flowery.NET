                                    </controls:DaisyButton.IconLeft>
                                </controls:DaisyButton>
                            </StackPanel>
                        </Border>

                    </Grid>
                </controls:DaisyCard>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- Scale Presets Reference -->
            <StackPanel Spacing="4">
                <local:SectionHeader SectionId="scale-presets" Title="{galloc:Localize Scaling_Presets_Title}" />
                <TextBlock Text="{galloc:Localize Scaling_Presets_Subtitle}"
                           FontSize="{services:Scale FontCaption}" Opacity="0.7"
                           Foreground="{DynamicResource DaisyBaseContentBrush}" />

                <WrapPanel Orientation="Horizontal">
                    <!-- Font Presets -->
                    <controls:DaisyCard Width="{services:Scale CardWidth}" Margin="0,0,16,16" Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="{galloc:Localize Scaling_Presets_Fonts}" FontSize="{services:Scale FontHeading}" FontWeight="SemiBold"
                                Foreground="{DynamicResource DaisyPrimaryBrush}" />
                            <controls:DaisyDivider />
                            <TextBlock Text="FontDisplay (32â†’20)" FontSize="{services:Scale FontDisplay}"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            <TextBlock Text="FontTitle (28â†’18)" FontSize="{services:Scale FontTitle}"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            <TextBlock Text="FontHeading (20â†’14)" FontSize="{services:Scale FontHeading}"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            <TextBlock Text="FontSubheading (16â†’11)" FontSize="{services:Scale FontSubheading}"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            <TextBlock Text="FontBody (14â†’10)" FontSize="{services:Scale FontBody}"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            <TextBlock Text="FontCaption (12â†’9)" FontSize="{services:Scale FontCaption}"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            <TextBlock Text="FontSmall (11â†’8)" FontSize="{services:Scale FontSmall}"
                                Foreground="{DynamicResource DaisyBaseContentBrush}" />
                        </StackPanel>
                    </controls:DaisyCard>

                    <!-- Spacing Presets -->
                    <controls:DaisyCard Width="{services:Scale CardWidth}" Margin="0,0,16,16" Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="{galloc:Localize Scaling_Presets_Spacing}" FontSize="{services:Scale FontHeading}" FontWeight="SemiBold"
                                Foreground="{DynamicResource DaisySecondaryBrush}" />
                            <controls:DaisyDivider />
                            <Border Background="{DynamicResource DaisyBase300Brush}" CornerRadius="4"
                                MinHeight="{services:Scale SpacingXL}"
                                Padding="16,0">
                                <TextBlock Text="SpacingXL (40px)" FontSize="{services:Scale FontCaption}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            </Border>
                            <Border Background="{DynamicResource DaisyBase300Brush}" CornerRadius="4"
                                MinHeight="{services:Scale SpacingLarge}"
                                Padding="16,0">
                                <TextBlock Text="SpacingLarge (28px)" FontSize="{services:Scale FontCaption}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            </Border>
                            <Border Background="{DynamicResource DaisyBase300Brush}" CornerRadius="4"
                                MinHeight="{services:Scale SpacingMedium}"
                                Padding="16,0">
                                <TextBlock Text="SpacingMedium (20px)" FontSize="{services:Scale FontCaption}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            </Border>
                            <Border Background="{DynamicResource DaisyBase300Brush}" CornerRadius="4"
                                MinHeight="{services:Scale SpacingSmall}"
                                Padding="16,0">
                                <TextBlock Text="SpacingSmall (12px)" FontSize="{services:Scale FontCaption}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            </Border>
                            <Border Background="{DynamicResource DaisyBase300Brush}" CornerRadius="4"
                                MinHeight="{services:Scale SpacingXS}"
                                Padding="16,0">
                                <TextBlock Text="SpacingXS (8px)" FontSize="{services:Scale FontCaption}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Foreground="{DynamicResource DaisyBaseContentBrush}" />
                            </Border>
                        </StackPanel>
                    </controls:DaisyCard>

                    <!-- Usage Example -->
                    <controls:DaisyCard Width="400" Margin="0,0,16,16" Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="{galloc:Localize Scaling_Presets_Usage}" FontSize="{services:Scale FontHeading}" FontWeight="SemiBold"
                                Foreground="{DynamicResource DaisyAccentBrush}" />
                            <controls:DaisyDivider />
                            <controls:DaisyCard Variant="Compact" Background="{DynamicResource DaisyBase200Brush}">
                                <TextBlock FontFamily="Consolas" FontSize="11" TextWrapping="Wrap" xml:space="preserve"
                                    Foreground="{DynamicResource DaisyBaseContentBrush}"><![CDATA[<!-- Add namespace -->
xmlns:services="..."

<!-- Using presets -->
<TextBlock FontSize="{services:Scale FontTitle}"/>
<Border Padding="{services:Scale SpacingMedium}"/>
<Grid Width="{services:Scale CardWidth}"/>

<!-- Custom values -->
<TextBlock FontSize="{services:Scale 24,12}"/>]]></TextBlock>
                            </controls:DaisyCard>
                        </StackPanel>
                    </controls:DaisyCard>
                </WrapPanel>
            </StackPanel>

            <controls:DaisyDivider />

            <!-- About This Demo (moved to bottom) -->
            <StackPanel Spacing="4">
                <local:SectionHeader SectionId="scaling-intro" Title="{galloc:Localize Scaling_About_Title}" />
                <controls:DaisyCard Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{galloc:Localize Scaling_About_Heading}" FontWeight="SemiBold" FontSize="{services:Scale FontHeading}"
                            Foreground="{DynamicResource DaisyBaseContentBrush}" />
                        <TextBlock TextWrapping="Wrap" FontSize="{services:Scale FontBody}"
                            Foreground="{DynamicResource DaisyBaseContentBrush}"
                            Text="{galloc:Localize Scaling_About_Description}" />
                        <TextBlock TextWrapping="Wrap" Opacity="0.7" FontSize="{services:Scale FontCaption}"
                            Foreground="{DynamicResource DaisyBaseContentBrush}"
                            Text="{galloc:Localize Scaling_About_Tip}" />
                    </StackPanel>
                </controls:DaisyCard>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
