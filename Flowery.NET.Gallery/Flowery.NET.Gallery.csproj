<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
  <LangVersion>latest</LangVersion>
  <Nullable>enable</Nullable>
    <!-- Ensure satellite assemblies are generated for all supported languages -->
    <SatelliteResourceLanguages>en;de;fr;es;it;zh-CN;ko;ja;ar;tr;uk;he</SatelliteResourceLanguages>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.3.9" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.3.9" />
    <PackageReference Include="Avalonia.Fonts.Inter" Version="11.3.9" />
    <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
    <PackageReference Include="Avalonia.Diagnostics" Version="11.3.9">
      <IncludeAssets Condition="'$(Configuration)' != 'Debug'">None</IncludeAssets>
      <PrivateAssets Condition="'$(Configuration)' != 'Debug'">All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Flowery.NET\Flowery.NET.csproj" />
    <ProjectReference Include="..\Flowery.Capture.NET\Flowery.Capture.NET.csproj" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>

  <ItemGroup>
    <!-- Embed JSON localization files as resources -->
    <EmbeddedResource Include="Localization\en.json" />
    <EmbeddedResource Include="Localization\de.json" />
    <EmbeddedResource Include="Localization\ja.json" />
    <EmbeddedResource Include="Localization\fr.json" />
    <EmbeddedResource Include="Localization\es.json" />
    <EmbeddedResource Include="Localization\it.json" />
    <EmbeddedResource Include="Localization\ko.json" />
    <EmbeddedResource Include="Localization\zh-CN.json" />
    <EmbeddedResource Include="Localization\ar.json" />
    <EmbeddedResource Include="Localization\tr.json" />
    <EmbeddedResource Include="Localization\uk.json" />
    <EmbeddedResource Include="Localization\he.json" />
  </ItemGroup>
</Project>
